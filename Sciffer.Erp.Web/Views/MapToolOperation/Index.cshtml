@using Sciffer.Erp.Domain.ViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Map Tool Operation</h2>
<hr />
<div>
    @(Html.EJ().Grid<ref_tool_operation_map_vm>("Searching")
        // .Datasource(ds => ds.URL(Url.Action("GetItems", "Items")).RemoveURL(Url.Action("InlineDelete", "Items")).Adaptor(AdaptorType.RemoteSaveAdaptor))

        .Datasource(ds => { ds.Json((IEnumerable<object>)ViewBag.DataSource).RemoveURL(Url.Action("Delete", "OperatorQualityParameter")).Adaptor(AdaptorType.RemoteSaveAdaptor); })
        .EditSettings(edit => { edit.AllowAdding().AllowDeleting().AllowEditing().EditMode(EditMode.InlineFormTemplate).ShowDeleteConfirmDialog(true); })
        .EnableAltRow().AllowPaging()
        .PageSettings(p => { p.PageSize(12); })
        .ToolbarSettings(toolBar => toolBar.ShowToolbar().ToolbarItems(items =>
        {
            items.AddTool(ToolBarItems.Search);
            items.AddTool(ToolBarItems.Add);
            items.AddTool(ToolBarItems.Edit);

        }))

        .AllowSorting()
        .AllowPaging()
        .IsResponsive()
        .AllowFiltering()
        .ShowColumnChooser()
        .AllowReordering()
        .AllowScrolling()
        .ScrollSettings(col => { col.Width("100%"); })
        .FilterSettings(filter => { filter.FilterType(FilterType.Excel); })
        .Columns(col =>
        {
            col.Field("tool_operation_map_id").Width("15%").HeaderText("ID").IsPrimaryKey(true).Width(80).Visible(false).ShowInColumnChooser(false).Add();
            col.Field("process_id").Width("15%").Visible(false).ShowInColumnChooser(false).HeaderText("Process Id").Add();
            col.Field("process_description").Width("15%").HeaderText("Process Name").Add();
            col.Field("ITEM_CATEGORY_ID").Width("15%").Visible(false).ShowInColumnChooser(false).HeaderText("Crankshaft Id").Add();
            col.Field("ITEM_NAME_CRANKSHAFT").Width("15%").HeaderText("Crankshaft Name").Add();
            col.Field("ITEM_ID").Width("15%").Visible(false).ShowInColumnChooser(false).HeaderText("Item Id").Add();
            col.Field("item_name").Width("15%").HeaderText("Item Name").Visible(false).Add();
            col.Field("tool_usage_type_id").Width("15%").Visible(false).ShowInColumnChooser(false).HeaderText("Tool Usage Type Id").Add();
            col.Field("tool_usage_type_name").Width("15%").HeaderText("Tool Usage Type Name").Add();
            col.Field("tool_category_id").Width("15%").Visible(false).ShowInColumnChooser(false).HeaderText("Tool Category Id").Add();
            col.Field("tool_category_name").Width("15%").HeaderText("Tool Category Name").Add();
            col.Field("is_blocked").Width("15%").HeaderText("Is Blocked").Add();
        }).ClientSideEvents(eve =>
        {
            eve.ActionBegin("actionBegin");
            eve.RightClick("rightClick");
        })
    )
</div>
<style>
    .e-editedrow {
        display: none;
    }

    .e-editcell {
        display: none;
    }
</style>

<script type="text/javascript">

    function actionBegin(args) {
        if (args.requestType == "beginedit") {
            location.href = "@Url.Action("Edit", "MapToolOperation")?id=" + args.rowData.tool_operation_map_id;
           
        }
        if (args.requestType == "add") {
            location.href = "@Url.Action("Create", "MapToolOperation")"
        }
    }

    $(document).ready(function () {
        var num = '@ViewBag.num';
        if (num != '') {
            sweetAlert("", num, "success");

        }
    });

</script>