
@using Sciffer.Erp.Domain.Model

@{
    ViewBag.Title = "Index";
}



<p>
    <a href="@Url.Action("Create", "Frequency")" data-toggle="modal" class="btn-circle btn-lg btn-primary"><span class="glyphicon glyphicon-plus"></span> </a>
</p>
<div>
    @(Html.EJ().Grid<ref_frequency>("Searching")
        .Datasource((IEnumerable<object>)ViewBag.DataSource)
        .EditSettings(edit => { edit.AllowAdding().AllowDeleting().AllowEditing().EditMode(EditMode.InlineFormTemplate); })
        .ToolbarSettings(toolBar => toolBar.ShowToolbar().ToolbarItems(items =>
        {
            items.AddTool(ToolBarItems.ExcelExport);
            items.AddTool(ToolBarItems.WordExport);
            items.AddTool(ToolBarItems.PdfExport);
            items.AddTool(ToolBarItems.PrintGrid);
        }))
        .Mappers(map => map.ExportToExcelAction(Url.Action("ExportToExcel", "Frequency"))
        .ExportToPdfAction(Url.Action("ExportToPdf", "Frequency")).ExportToWordAction(Url.Action("ExportToWord", "Frequency")))
        .AllowSorting()
        .AllowPaging()
        .IsResponsive()
        .AllowFiltering()
        .ShowColumnChooser()
        .AllowReordering()
         .AllowScrolling()
        .ScrollSettings(col => { col.Width("100%"); })
        .FilterSettings(filter => { filter.FilterType(FilterType.Excel); })
        .Columns(col =>
        {
            col.Field("frequency_id").Width("15%").HeaderText("ID").IsPrimaryKey(true).Width(80).Add();
            col.Field("frequency_name").Width("15%").HeaderText("Frequency").Add();

        }).ClientSideEvents(eve =>
        {
            eve.ActionBegin("actionBegin");
            eve.RightClick("rightClick");
        })
    )
</div>
<style>
    .e-editedrow {
        display: none;
    }
</style>

<script type="text/javascript">

    function actionBegin(args) {
        if (args.requestType == "beginedit")
        {
            location.href = '@Url.Action("Edit", "Frequency")?id=' + args.rowData.frequency_id;
        }
    }
    function rightClick(args) {
        location.href = '@Url.Action("Details", "Frequency")?id=' + args.data.frequency_id;
    }
</script>

