@model Sciffer.Erp.Domain.Model.REF_FINANCIAL_YEAR

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.FINANCIAL_YEAR_NAME, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FINANCIAL_YEAR_NAME, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FINANCIAL_YEAR_NAME, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FINANCIAL_YEAR_FROM, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FINANCIAL_YEAR_FROM, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FINANCIAL_YEAR_FROM, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FINANCIAL_YEAR_TO, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FINANCIAL_YEAR_TO, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FINANCIAL_YEAR_TO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" id="create" name="create" style="float:right" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
                $("#create").click(function (e) {
                    e.preventDefault();
                    var f = $('#FINANCIAL_YEAR_NAME').val();
                    var d = $('#FINANCIAL_YEAR_FROM').val();
                    var d1 = $('#FINANCIAL_YEAR_TO').val();
                    if (f == "") {
                        sweetAlert("", "Financial year is required!", "error");
                    }
                    else if (d == "") {
                        sweetAlert("", "From date is required!", "error");
                    }
                    else if (d1 == "") {
                        sweetAlert("", "To date is required!", "error");
                    }
                    else {
                        $.ajax({
                            url: '/FinancialYear/CheckDuplicate',
                            type: "GET",
                            dataType: "JSON",
                            asynch: true,
                            data: { st: d,st1:d1, id: 0 },
                            success: function (output) {
                                if (output != 0) {
                                    sweetAlert("", "This financial year is already present in databse!", "error");
                                }
                                else {
                                    document.forms[0].submit();
                                }
                            }
                        });
                    }
                });
    </script>


}