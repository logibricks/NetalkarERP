
@using Sciffer.Erp.Domain.ViewModel
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>
<style>
    .item_label {
        font-size: 14px !important;
    }
</style>

<script type="text/javascript">
    $(document).ready(function () {
        $(".loading").hide();
        $('.mickey').multiselect({
            includeSelectAllOption: true,
            enableFiltering: true,
            maxHeight: '200',
            enableCaseInsensitiveFiltering: true,
            allowClear: true,
            maximumResultsForSearch: 1,
            numberDisplayed: 0,
        });
    });
</script>

<div class="loading">Loading &#8230;</div>
<div class="form-horizontal">
    <div class=row>

    </div>
    <br />

    <div class=row>

        <div class="col-md-4 col-lg-4 col-xs-12">
            <label class="control-label col-md-5 col-lg-5 col-xs-12">From Date</label>
            <div class="col-md-7 col-lg-7 col-xs-12">
                <input type="date" id="fromDate" class="form-control">
            </div>
        </div>
        <div class="col-md-4 col-lg-4 col-xs-12">
            <label class="control-label col-md-5 col-lg-5 col-xs-12">To Date</label>
            <div class="col-md-7 col-lg-7 col-xs-12">
                <input type="date" id="toDate" class="form-control radius">
            </div>
        </div>
        <div class="col-md-4 col-lg-4 col-xs-12" style="float:right">
            <button class="searchbutton searchButton" id="search" style="float:right"> Run Report </button>
        </div>
    </div>
    <br /><br />
</div>
<hr />

<div class="row">
    <div id="searchresult">
        @Html.Partial("Partial_DailyRejectionNCReport", (object)ViewBag)
    </div>
</div>


<script type="text/javascript">

    $("#search").click(function () {
        AdvanceSearch();
    });

    document.getElementById('fromDate').valueAsDate = new Date();
    document.getElementById('toDate').valueAsDate = new Date();

    function AdvanceSearch() {
        var fromDate = $("#fromDate").val();
        var toDate = $("#toDate").val();

        $(".loading").show();
        $.ajax({
            url: "@Url.Action("GetDailyNCRejection_Partial", "ProductionReport")",
            method: "Post",
            cache: false,
            data: { entity: "get_daily_nc_rejection_report", from_date: fromDate, to_date: toDate },
            success: function (data) {
                $(".loading").hide();
                $('#searchresult').empty().append(data);
            },
            error: function (http) {
                $(".loading").hide();
                $("", "Something went wrong", "error");
                console.log(XMLHttpRequest);
            }
        });
    }
</script>