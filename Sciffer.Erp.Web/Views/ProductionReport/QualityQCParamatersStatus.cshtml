@using Sciffer.Erp.Domain.ViewModel
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('.mickey').multiselect({
            includeSelectAllOption: true,
            enableFiltering: true,
            maxHeight: '200',
            enableCaseInsensitiveFiltering: true,
            allowClear: true,
            maximumResultsForSearch: 1,
            numberDisplayed: 0,
        });
    });
</script>
<div class="loading">Loading &#8230;</div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">

        <div class=row>
            <div class="col-md-4 col-lg-4 col-xs-12">
                <label class="control-label col-md-5 col-lg-5 col-xs-12">From Date</label>
                <div class="col-md-7 col-lg-7 col-xs-12">
                    <input type="date" id="fromDate" class="form-control radius" required="required">
                </div>
            </div>
            <div class="col-md-4 col-lg-4 col-xs-12">
                <label class="control-label col-md-5 col-lg-5 col-xs-12">To Date</label>
                <div class="col-md-7 col-lg-7 col-xs-12">
                    <input type="date" id="toDate" class="form-control radius" required="required">
                </div>
            </div>
            <div class="col-md-4 col-lg-4 col-xs-12">
                <div class="control-label col-md-5 col-lg-5 col-xs-12">
                    <label></label>
                </div>
                <div class="col-md-7 col-lg-7 col-xs-12">
                    <button class="searchbutton searchButton" id="search"> &nbsp; Run Report </button>
                </div>
            </div>
        </div>
        <div class=row>
            <div class="col-md-4 col-lg-4 col-xs-12">
                <label class="control-label col-md-5 col-lg-5 col-xs-12">Tag number </label>
                <div class="col-md-7 col-lg-7 col-xs-12">
                    <input type="text" id="tag_number" class="form-control radius" />
                </div>
            </div>
            <div class="col-md-4 col-lg-4 col-xs-12">
                <label class="control-label col-md-5 col-lg-5 col-xs-12">Machine</label>
                <div class="col-md-7 col-lg-7 col-xs-12">
                    @Html.DropDownList("machine_id", (System.Web.Mvc.SelectList)ViewBag.mplist, "", htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
            <div class="col-md-4 col-lg-4 col-xs-12">
                <label class="control-label col-md-5 col-lg-5 col-xs-12">Item</label>
                <div class="col-md-7 col-lg-7 col-xs-12">
                    @Html.DropDownList("item_id", (System.Web.Mvc.SelectList)ViewBag.item_list, "", htmlAttributes: new { @class = "form-control", })
                </div>
            </div>
        </div>
        <br />
        <div class=row>
            <div class="col-md-4 col-lg-4 col-xs-12">
                <label class="control-label col-md-5 col-lg-5 col-xs-12">Auto QC Remark</label>
                <div class="col-md-7 col-lg-7 col-xs-12">
                    <input type="checkbox" id="is_qc_remark" class="form-control radius" />
                </div>
            </div>
        </div>
        <br />
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">

        <div id="searchresult">
            @Html.Partial("Partial_QualityQCParamatersStatus", (object)ViewBag)
        </div>
    </div>
</div>



<script type="text/javascript">

    $('#is_qc_remark').checkboxpicker();

  $(document).ready(function(){
        $("#item_id").select2({
                placeholder: "Select Item",
                allowClear: true
        });

        $("#machine_id").select2({
            placeholder: "Select Machine",
            allowClear: true
        });
    })

    $(function () {
        //$("#machine_id").multiselect('selectAll', false);
        //$('#machine_id').multiselect('updateButtonText');
        //$("#item_id").multiselect('selectAll', false);
        //$('#item_id').multiselect('updateButtonText');


    });
    $("#search").click(function () {
        AdvanceSearch();
    });
    document.getElementById('fromDate').valueAsDate = new Date();
    document.getElementById('toDate').valueAsDate = new Date();
    function AdvanceSearch() {
        var fromDate = $("#fromDate").val();
        var toDate = $("#toDate").val();
        var tag_number = $("#tag_number").val();
        var itemid = $("#item_id").val();
        var machineid = $("#machine_id").val();
        var is_qc_remark = $("#is_qc_remark").is(':checked') ==true ? true : false;

        //if ($('#machine_id :selected').length > 0) {
        //    var selectedmachineid = [];
        //    $('#machine_id :selected').each(function (i, selected) {
        //        selectedmachineid[i] = $(selected).val();
        //    });
        //    var machineid = selectedmachineid + "";
        //}
        //if ($('#item_id :selected').length > 0) {
        //    var selecteditemid = [];
        //    $('#item_id :selected').each(function (i, selected) {
        //        selecteditemid[i] = $(selected).val();
        //    });
        //    var itemid = selecteditemid + "";
        //}

        $(".loading").show();
        $.ajax({
            url: "@Url.Action("Get_Partial", "ProductionReport")",
            method: "Post",
            cache: false,
            data: {
                entity: "get_Quality_QC_Paramaters_Status", from_date: fromDate, to_date: toDate, machine_id: machineid, item_id: itemid, tag_number: tag_number, is_qc_remark: is_qc_remark
            },
            success: function (data) {
                $(".loading").hide();
                $('#searchresult').empty().append(data);
            },
            error: function (http) {
                console.log(XMLHttpRequest);
            }
        });

    }
</script>
