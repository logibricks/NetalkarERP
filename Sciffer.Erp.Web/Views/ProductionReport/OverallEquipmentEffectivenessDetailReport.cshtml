@using Sciffer.Erp.Domain.ViewModel
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="form-horizontal">
            <div class="x_content">
                <div class=row>
                    <div class="col-md-4 col-lg-4 col-xs-12">
                        <label class="control-label col-md-5 col-lg-5 col-xs-12">From Date</label>
                        <div class="col-md-7 col-lg-7 col-xs-12">
                            <input type="date" id="fromDate" class="form-control radius" required="required">
                        </div>
                    </div>
                    <div class="col-md-4 col-lg-4 col-xs-12">
                        <label class="control-label col-md-5 col-lg-5 col-xs-12">To Date</label>
                        <div class="col-md-7 col-lg-7 col-xs-12">
                            <input type="date" id="toDate" class="form-control radius">
                            <input type="hidden" id="entity" value="getoeedetailreport" />
                            <input type="hidden" id="partial" value="Partial_OEEDetailReport" />
                        </div>
                    </div>
                    <div class="col-md-4 col-lg-4 col-xs-12">
                        <label class="control-label col-md-5 col-lg-5 col-xs-12">Item</label>
                        <div class="col-md-7 col-lg-7 col-xs-12">
                            @Html.DropDownList("item_id", (System.Web.Mvc.SelectList)ViewBag.item_list, htmlAttributes: new { @class = "form-control mickey item_id", multiple = "multiple" })
                        </div>
                    </div>
                    <div class="col-md-4 col-lg-4 col-xs-12">
                        <label class="control-label col-md-5 col-lg-5 col-xs-12">Shift</label>
                        <div class="col-md-7 col-lg-7 col-xs-12">
                            @Html.DropDownList("shift_id", (System.Web.Mvc.SelectList)ViewBag.shift_list, htmlAttributes: new { @class = "form-control mickey plant_id", multiple = "multiple" })
                        </div>
                    </div>
                    <div class="col-md-4 col-lg-4 col-xs-12">
                        <label class="control-label col-md-5 col-lg-5 col-xs-12">Machine</label>
                        <div class="col-md-7 col-lg-7 col-xs-12">
                            @Html.DropDownList("machine_id", (System.Web.Mvc.SelectList)ViewBag.machine_list, htmlAttributes: new { @class = "form-control mickey employee_id", multiple = "multiple" })
                        </div>
                    </div>
                    <div class="col-md-4 col-lg-4 col-xs-12">
                        <label class="control-label col-md-5 col-lg-5 col-xs-12">Supervisor</label>
                        <div class="col-md-7 col-lg-7 col-xs-12">
                            @Html.DropDownList("supervisor_id", (System.Web.Mvc.SelectList)ViewBag.operator_list, htmlAttributes: new { @class = "form-control mickey supervisor_id", multiple = "multiple" })
                        </div>
                    </div>
                    <div class="col-md-4 col-lg-4 col-xs-12">
                        <label class="control-label col-md-5 col-lg-5 col-xs-12">Plant</label>
                        <div class="col-md-7 col-lg-7 col-xs-12">
                            @Html.DropDownList("plant_id", (System.Web.Mvc.SelectList)ViewBag.plant_list, htmlAttributes: new { @class = "form-control mickey plant_id", multiple = "multiple" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 col-lg-3 col-xs-12 pull-right">
                        <button class="searchbutton searchButton pull-right " id="search"> &nbsp; Run Report </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_content">
            <div id="searchresult">
                @Html.Partial("Partial_OEEDetailReport", (object)ViewBag)
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {

        $("#plant_id").multiselect('selectAll', false);
        $('#plant_id').multiselect('updateButtonText');
        $("#item_id").multiselect('selectAll', false);
        $('#item_id').multiselect('updateButtonText');



    });
    $("#search").click(function () {
        AdvanceSearch();
    });
    document.getElementById('fromDate').valueAsDate = new Date();
    document.getElementById('toDate').valueAsDate = new Date();
    function AdvanceSearch() {
        var fromDate = $("#fromDate").val();
        var toDate = $("#toDate").val();
        if ($('#shift_id :selected').length > 0) {
            var shiftid = '';
            if ($('#shift_id').next('div').find('button').find('span').text().includes("All")) {
                shiftid = -1;
            }
            else {
                var selectedplantid = [];
                $('#shift_id :selected').each(function (i, selected) {
                    selectedplantid[i] = $(selected).val();
                });
                shiftid = selectedplantid + "";
                if (shiftid == '') {
                    shiftid = -1;
                }
            }
        }
        if ($('#item_id :selected').length > 0) {
            var itemid=''
            if ($('#item_id').next('div').find('button').find('span').text().includes("All")) {
                itemid = -1;
            }
            else {
                var selecteditemid = [];
                $('#item_id :selected').each(function (i, selected) {
                    selecteditemid[i] = $(selected).val();
                });
                itemid = selecteditemid + "";
                if (itemid == '') {
                    itemid = -1;
                }
            }
        }

        if ($('#machine_id :selected').length > 0) {
            var machineid = '';
            if ($('#item_id').next('div').find('button').find('span').text().includes("All")) {
                machineid = -1;
            }
            else {
                var selectedmachineid = [];
                $('#machine_id :selected').each(function (i, selected) {
                    selectedmachineid[i] = $(selected).val();
                });
                machineid = selectedmachineid + "";
                if (machineid == '') {
                    machineid = -1;
                }
            }
        }

        if ($('#supervisor_id :selected').length > 0) {
            var supervisorid = '';
            if ($('#supervisor_id').next('div').find('button').find('span').text().includes("All")) {
                supervisorid = -1;
            }
            else {
                var selectedsupid = [];
                $('#supervisor_id :selected').each(function (i, selected) {
                    selectedsupid[i] = $(selected).val();
                });
                supervisorid = selectedsupid + "";
                if (supervisorid == '') {
                    supervisorid = -1;
                }
            }
        }

        if ($('#plant_id :selected').length > 0) {
            var plantid = '';
            if ($('#plant_id').next('div').find('button').find('span').text().includes("All")) {
                var plantid = -1;
            }
            else {
                var selectedplid = [];
                $('#plant_id :selected').each(function (i, selected) {
                    selectedplid[i] = $(selected).val();
                });
                plantid = selectedplid + "";
                if (plantid == '') {
                    plantid = -1;
                }
            }
        }



        $(".loading").show();
        $.ajax({
            url: "@Url.Action("Get_PartialM", "ProductionReport")",
            method: "Post",
        cache: false,
        data: {
            entity: "getoeedetailreport", from_date: fromDate, to_date: toDate, shift_id: shiftid, item_id: itemid, machine_id: machineid, supervisor_id: supervisorid, plant_id: plantid
        },
        success: function (data) {
            $(".loading").hide();
            $('#searchresult').empty().append(data);
        },
        error: function (http) {
            console.log(XMLHttpRequest);
        }
        });

    }
</script>


