@*@model IEnumerable<Sciffer.Erp.Domain.ViewModel.REF_CUSTOMER_VM>*@
@using Sciffer.Erp.Domain.ViewModel
@{
    ViewBag.Title = "Index";
}

<br /><br /><br />

<div>
    @(Html.EJ().Grid<material_requision_note_vm>("FlatGrid")
        .Datasource(ds => ds.URL(Url.Action("GetIndexData", "Generic", new { @ctrl_name = "MaterialRequisitionNote" }))
         .EnableCaching()
        .CachingPageSize(4)
        .TimeTillExpiration(120000)
        .Adaptor(AdaptorType.UrlAdaptor))
        .EditSettings(edit => { edit.AllowAdding().AllowDeleting().AllowEditing().EditMode(EditMode.InlineFormTemplate); })
        .ToolbarSettings(toolBar => toolBar.ShowToolbar().ToolbarItems(items =>
        {
            items.AddTool(ToolBarItems.Add);
            items.AddTool(ToolBarItems.Edit);
            items.AddTool(ToolBarItems.ExcelExport);
            items.AddTool(ToolBarItems.PrintGrid);
        }))
        .Mappers(map => map.ExportToExcelAction(Url.Action("ExportToExcel", "Generic", new { ctrlname = "MaterialRequisitionNote" }))
        .ExportToPdfAction(Url.Action("ExportToPdf", "Generic", new { ctrlname = "MaterialRequisitionNote" })).ExportToWordAction(Url.Action("ExportToWord", "Generic", new { ctrlname = "MaterialRequisitionNote" })))
        .AllowSorting()
      .AllowPaging().PageSettings(a => a.PageSize(20))
        .IsResponsive()
        .AllowFiltering()
        .ShowColumnChooser()
        .AllowReordering()
        .AllowScrolling()
        .ScrollSettings(col => { col.Width("100%"); })
        .FilterSettings(filter => { filter.FilterType(FilterType.Excel); })
        .Columns(col =>
        {
            col.Field("material_requision_note_id").Width("15%").Width("15%").HeaderText("ID").IsPrimaryKey(true).Visible(false).Width(20).Add();
            col.Field("category_name").Width("15%").HeaderText("Category").Add();
            col.Field("number").Width("15%").HeaderText("Number").Add();
            col.Field("posting_date").Width("15%").HeaderText("Posting Date").Format("{0:dd/MM/yyyy}").Add();
            col.Field("document_date").Width("15%").HeaderText("Document Date").Format("{0:dd/MM/yyyy}").Add();
            col.Field("requirement_by_name").Width("15%").HeaderText("Requirement by").Add();
            col.Field("plant_name").Width("15%").HeaderText("Plant").Add();
            col.Field("remarks").Width("15%").HeaderText("Remarks").Add();
            col.Field("receiving_sloc_name").Width("15%").HeaderText("Receiving Sloc").Visible(true).Add();
            col.Field("type_name").Width("15%").HeaderText("Type").Visible(true).Add();
            col.Field("sending_sloc_name").Width("15%").HeaderText("Sending Sloc").Visible(true).Width(80).Add();
            col.Field("status_name").Width("15%").HeaderText("Status").Visible(true).Add();
            col.Field("approval_status_name").Width("15%").HeaderText("Approval Status").Visible(true).Add();
            col.Field("approval_comments").Width("15%").HeaderText("Approval Comments").Visible(true).Add();
            col.Field("approval_user").Width("15%").HeaderText("Approval User").Visible(true).Add();
        })
        .ClientSideEvents(eve =>
        {
            eve.ActionBegin("actionBegin");
            eve.RightClick("rightClick");
        })
    )
</div>

<style>
    .e-editedrow {
        display: none;
    }

    .e-editcell {
        display: none;
    }
</style>

<script type="text/javascript">

    function actionBegin(args) {
        if (args.requestType == "beginedit")
        {
            location.href = '@Url.Action("Edit", "MaterialRequisitionNote")?id=' + args.rowData.material_requision_note_id;
        }
        if(args.requestType=="add")
        {
            location.href = '@Url.Action("Create", "MaterialRequisitionNote")';
        }
    }

    function rightClick(args) {
        location.href = '@Url.Action("Details", "MaterialRequisitionNote")?id=' + args.data.material_requision_note_id;
    }

    $(document).ready(function () {
        var doc_no = '@ViewBag.doc';
        if (doc_no != '') {
            if (doc_no != 0) {
                sweetAlert("", doc_no + " Saved successfully!", "success");
            }
        }
    });
</script>







