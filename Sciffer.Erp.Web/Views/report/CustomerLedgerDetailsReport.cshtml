

@using Sciffer.Erp.Domain.ViewModel
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>


<script type="text/javascript">
    $(document).ready(function () {
        $('.mickey').multiselect({
            includeSelectAllOption: true,
            enableFiltering: true,
            maxHeight: '200',
            enableCaseInsensitiveFiltering: true,
            allowClear: true,
            maximumResultsForSearch: 1,
            numberDisplayed: 0,
        });
    });
</script>
<style>

</style>


<div class="form-horizontal">
    <div class=row>
        <div class="col-md-4 col-lg-4 col-xs-12">
            <label class="control-label col-md-5 col-lg-5 col-xs-12">From Date</label>
            <div class="col-md-7 col-lg-7 col-xs-12">
                <input type="date" id="fromDate" class="form-control radius" required="required">
            </div>
        </div>
        <div class="col-md-4 col-lg-4 col-xs-12">
            <label class="control-label col-md-5 col-lg-5 col-xs-12">To Date</label>
            <div class="col-md-7 col-lg-7 col-xs-12">
                <input type="date" id="toDate" class="form-control radius" required="required">
            </div>
        </div>
        <div class="col-md-4 col-lg-4 col-xs-12">
            <div class="col-md-5 col-lg-5 col-xs-12">
                <label></label>
            </div>
            <div class="col-md-7 col-lg-7 col-xs-12">
                <button class="searchbutton searchButton" id="search"> &nbsp; Run Report </button>
            </div>
        </div>
    </div>
    <br />
    <div class=row>
        <div class="col-md-4 col-lg-4 col-xs-12">
            <label class="control-label col-md-5 col-lg-5 col-xs-12">Customer</label>
            <div class="col-md-7 col-lg-7 col-xs-12">
                @Html.DropDownList("customer_id", (System.Web.Mvc.SelectList)ViewBag.customer_list, htmlAttributes: new { @class = "form-control" })

            </div>
        </div>
    </div>
</div>

<br />
<div class="row">

    <div id="searchresult">
        @Html.Partial("Partial_CustomerLedgerDetails", (object)ViewBag)
    </div>
</div>
@Styles.Render("~/Content/select2.min.css")
@Scripts.Render("~/Scripts/select2.full.js")
<script type="text/javascript">
    $("#customer_id").select2({
        placeholder: "Select Customer",
        allowClear: true
    });

    $("#search").click(function () {
        AdvanceSearch();
    });
    document.getElementById('fromDate').valueAsDate = new Date();
    document.getElementById('toDate').valueAsDate = new Date();
    function AdvanceSearch() {
        if ($('#customer_id :selected').length > 0) {
            var selectedCustomer = [];
            $('#customer_id :selected').each(function (i, selected) {
                selectedCustomer[i] = $(selected).val();
            });
            var Customer = selectedCustomer + "";
        }


        var fromDate = $('#fromDate').val();
        var toDate = $('#toDate').val();

        $.ajax({
            url: '@Url.Action("GetCustomerLedgerDetailsReport", "Report")',
            method: "Post",
            cache: false,
            data: { customer: Customer, fromdate: fromDate, todate: toDate },
            success: function (data) {
                $(".loading").hide();
                $('#searchresult').empty().append(data);
                //console.log(data);
            },
            error: function (http) {
                console.log(XMLHttpRequest);
            }
        });
    }
</script>
<div class="modal"><!-- Place at bottom of page --></div>
