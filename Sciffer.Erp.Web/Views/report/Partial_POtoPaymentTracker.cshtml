                                                                    col.Field("QC_Doc_Number").Width("10%").HeaderText("Qc Doc Number").Visible(false).Add();
                                                                    col.Field("QC_Posting_Date").Width("10%").HeaderText("Qc Posting Date").Visible(false).Add();
