@using Sciffer.Erp.Domain.ViewModel
@using Syncfusion.JavaScript.Models




@{(Html.EJ().Grid<Report_Purchase_Requisition_Detailed__vm>("Editing")
                                                    .Datasource((IEnumerable<object>)ViewBag.datasource)
                                                      .AllowPaging().PageSettings(a=>a.PageSize(20))
                                                      .AllowFiltering()
                                                          .FilterSettings(X => X.FilterType(FilterType.Excel))
                                                      .ShowColumnChooser()
                                                      .AllowSorting()
                                                      .AllowScrolling()
                                                      .Mappers(map => map.ExportToExcelAction(Url.Action("ExportToExcelForReport", "Generic", new { ctrlname = "SalesSummaryReport" }))
                                                      .ExportToPdfAction(Url.Action("ExportToPdfForReport", "Generic", new { ctrlname = "SalesSummaryReport" })))
                                                      .ScrollSettings(scroll => { scroll.Width("100%"); })

                                                  .ToolbarSettings(toolbar =>
                                                  {
                                                      toolbar.ShowToolbar().ToolbarItems(items =>
                                                      {
                                                          items.AddTool(ToolBarItems.Search);
                                                          items.AddTool(ToolBarItems.ExcelExport);
                                                          items.AddTool(ToolBarItems.PrintGrid);
                                                      });
                                                  })
                                          .Columns(col =>
                                          {
                                              col.Field("Doc_Category").Width("10%").HeaderText("Doc Category").Add();
                                              col.Field("DOcument_Number").Width("10%").HeaderText("Document Number").Add();
                                              col.Field("Posting_Date").Width("10%").HeaderText("Posting Date").Add();
                                              col.Field("Business_Unit").Width("10%").HeaderText("Business Unit").Visible(false).Add();
                                              col.Field("Plant").Width("10%").HeaderText("Plant").Visible(false).Add();
                                              col.Field("Header_Delivery_Date").Width("10%").HeaderText("Header Delivery Date").Visible(false).Add();
                                              col.Field("Source").Width("10%").HeaderText("Source").Visible(false).Add();
                                              col.Field("Item_COde").Width("10%").HeaderText("Item COde").Visible(false).Add();
                                              col.Field("Item_Description").Width("10%").HeaderText("Item Description").Visible(false).Add();
                                              col.Field("Delivery_Date").Width("10%").HeaderText("Delivery Date").Visible(false).Add();
                                              col.Field("Qty").Width("10%").HeaderText("Qty").Visible(false).Add();
                                              col.Field("UoM").Width("10%").HeaderText("UoM").Visible(false).Add();
                                              col.Field("SLOC").Width("10%").HeaderText("SLOC").Visible(false).Add();
                                              col.Field("Info_Price").Width("10%").HeaderText("Info Price").Visible(false).Add();
                                              col.Field("Preferred_Vendor").Width("10%").HeaderText("Preferred Vendor").Visible(false).Add();
                                          })
                                          .ClientSideEvents(eve => { eve.ActionComplete("complete").EndAdd("EndProcess").EndDelete("EndProcess").EndEdit("EndProcess"); })
                                          ).Render();}
