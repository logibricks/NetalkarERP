@using Sciffer.Erp.Domain.ViewModel
@using Syncfusion.JavaScript.Models




@{(Html.EJ().Grid<Report_Sales_Order_Item_wise_Plan_vm>("Editing")
                                    .Datasource((IEnumerable<object>)ViewBag.datasource)
                                      .AllowPaging().PageSettings(a=>a.PageSize(20))
                                      .AllowFiltering()
                                          .FilterSettings(X => X.FilterType(FilterType.Excel))
                                      .ShowColumnChooser()
                                      .AllowSorting()
                                      .AllowScrolling()
                                      .Mappers(map => map.ExportToExcelAction(Url.Action("ExportToExcelForReport", "Generic", new { ctrlname = "SalesSummaryReport" }))
                                      .ExportToPdfAction(Url.Action("ExportToPdfForReport", "Generic", new { ctrlname = "SalesSummaryReport" })))
                                      .ScrollSettings(scroll => { scroll.Width("100%"); })

                                  .ToolbarSettings(toolbar =>
                                  {
                                      toolbar.ShowToolbar().ToolbarItems(items =>
                                      {
                                          items.AddTool(ToolBarItems.Search);
                                          items.AddTool(ToolBarItems.ExcelExport);
                                          items.AddTool(ToolBarItems.PrintGrid);
                                      });
                                  })
                          .Columns(col =>
                          {
                              col.Field("Item_COde").Width("10%").HeaderText("Item Code").Add();
                              col.Field("Item_Description").Width("10%").HeaderText("Item Description").Add();
                              col.Field("Plant").Width("10%").HeaderText("Plant").Add();
                              col.Field("Delivery_Date").Width("10%").HeaderText("Delivery Date").Visible(false).Add();
                              col.Field("SO_Qty").Width("10%").HeaderText("SO Qty").Visible(false).Add();
                              col.Field("Invoiced_Qty").Width("10%").HeaderText("Invoiced Qty").Visible(false).Add();
                              col.Field("Balance_Qty").Width("10%").HeaderText("Balance Qty").Visible(false).Add();
                              col.Field("Current_Stock").Width("10%").HeaderText("Current Stock").Visible(false).Add();
                              col.Field("Customer_Code").Width("10%").HeaderText("Customer Code").Visible(false).Add();
                              col.Field("Customer_Description").Width("10%").HeaderText("Customer Description").Visible(false).Add();
                              col.Field("So_Number").Width("10%").HeaderText("So Number").Visible(false).Add();
                              col.Field("So_Line_Item_Number").Width("10%").HeaderText("So Line Item Number").Visible(false).Add();
                              col.Field("So_Date").Width("10%").HeaderText("So Date").Visible(false).Add();

                          })
                          .ClientSideEvents(eve => { eve.ActionComplete("complete").EndAdd("EndProcess").EndDelete("EndProcess").EndEdit("EndProcess"); })
                          ).Render();}
