
@(Html.EJ().TreeGrid("TreeGridContainer")
          .TreeColumnIndex(1)
          .AllowColumnResize(true)
          .IsResponsive(true)
          .IdMapping("vendor_id")
         .ParentIdMapping("parent_id")
         .ChildMapping("Children")
          .AllowSorting(true)
          .AllowMultiSorting(true)
          .ShowColumnChooser(true)
          .Mappers(map => map.ExportToExcelAction(Url.Action("ExportTreeGridModel", "PurchaseReport", new { ctrlname = "PaymentsExpectedToVendors" })))
          .Columns(co =>
          {
              co.Field("vendor_code").HeaderText("Vendor code").Add();
              co.Field("vendor_name").HeaderText("Vendor Description").Add();
              co.Field("category").HeaderText("Document Category").Add();
              co.Field("document_no").HeaderText("Document Number").Add();
              //co.Field("si_date").HeaderText("Posting Date ").Format("{0:dd/MMM/yyyy}").FilterEditType(TreeGridFilterEditType.Datepicker).Add();
              co.Field("total_quantity").HeaderText("Total Amount").Format("{0:n2}").TextAlign(TextAlign.Right).Add();
              co.Field("balance_quantity").HeaderText("Balance Amount").Format("{0:n2}").TextAlign(TextAlign.Right).Add();
          }
          )
           .IsResponsive(true)
              .ToolbarSettings(tool =>
              {
                  tool.ShowToolbar(true);
                  tool.ToolbarItems(new List<TreeGridToolBarItems>()
                 {
                      TreeGridToolBarItems.ExcelExport,
                 });
              }).ClientSideEvents(eve => { eve.ToolbarClick("OnToolbarClick"); })
             .Datasource(ViewBag.datasource)

)
