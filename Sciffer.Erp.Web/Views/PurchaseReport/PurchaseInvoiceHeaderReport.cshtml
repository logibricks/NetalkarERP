@using Sciffer.Erp.Domain.ViewModel
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class=row>
            <div class="col-md-4 col-lg-4 col-xs-12">
                <label class="control-label col-md-5 col-lg-5 col-xs-12">From Date</label>
                <div class="col-md-7 col-lg-7 col-xs-12">
                    <input type="date" id="fromDate" class="form-control radius" required="required">
                </div>
            </div>
            <div class="col-md-4 col-lg-4 col-xs-12">
                <label class="control-label col-md-5 col-lg-5 col-xs-12">To Date</label>
                <div class="col-md-7 col-lg-7 col-xs-12">
                    <input type="date" id="toDate" class="form-control radius" required="required">
                </div>
            </div>
            <div class="col-md-4 col-lg-4 col-xs-12">
                <div class="control-label col-md-5 col-lg-5 col-xs-12">
                    <input type="hidden" id="entity" value="getpiheaderlevelreport" />
                    <input type="hidden" id="partial" value="Partial_PurchaseInvoiceHeader" />
                    <label></label>
                </div>
                <div class="col-md-7 col-lg-7 col-xs-12">
                    <button class="searchbutton searchButton" id="search"  onclick="DateCheckp()"> &nbsp; Run Report </button>
                </div>
            </div>
        </div>
        <br />
        <div class=row>
            <div class="col-md-4 col-lg-4 col-xs-12">
                <label class="control-label col-md-5 col-lg-5 col-xs-12">Vendor Category</label>
                <div class="col-md-7 col-lg-7 col-xs-12">
                    @Html.DropDownList("vendor_category_id", (System.Web.Mvc.SelectList)ViewBag.vendor_category_list, htmlAttributes: new { @class = "form-control mickey vendor_category_id", multiple = "multiple" })

                </div>
            </div>
            <div class="col-md-4 col-lg-4 col-xs-12">
                <label class="control-label col-md-5 col-lg-5 col-xs-12">Priority</label>
                <div class="col-md-7 col-lg-7 col-xs-12">
                    @Html.DropDownList("priority_id", (System.Web.Mvc.SelectList)ViewBag.priority_list, htmlAttributes: new { @class = "form-control mickey vendor_priority_id", multiple = "multiple" })
                </div>
            </div>

            <div class="col-md-4 col-lg-4 col-xs-12">
                @Html.Label("Currency", htmlAttributes: new { @class = "control-label col-md-5 col-sm-5 col-xs-12" })
                <div class="col-md-7 col-lg-7 col-xs-12">
                    @Html.DropDownList("currency_id", (System.Web.Mvc.SelectList)ViewBag.currency_list, htmlAttributes: new { @class = "form-control mickey currency_id", multiple = "multiple" })
                </div>
            </div>
        </div>
        <br />
        <div class=row>
            <div class="col-md-4 col-lg-4 col-xs-12">
                <label class="control-label col-md-5 col-lg-5 col-xs-12">Plant</label>
                <div class="col-md-7 col-lg-7 col-xs-12">
                    @Html.DropDownList("plant_id", (System.Web.Mvc.SelectList)ViewBag.plant_list, htmlAttributes: new { @class = "form-control mickey plant_id", multiple = "multiple" })
                </div>
            </div>
            <div class="col-md-4 col-lg-4 col-xs-12">
                <label class="control-label col-md-5 col-lg-5 col-xs-12">Business Unit</label>
                <div class="col-md-7 col-lg-7 col-xs-12">
                    @Html.DropDownList("business_unit_id", (System.Web.Mvc.SelectList)ViewBag.business_list, htmlAttributes: new { @class = "form-control mickey business_unit_id", multiple = "multiple" })

                </div>
            </div>
            <div class="col-md-4 col-lg-4 col-xs-12">
                <label class="control-label col-md-5 col-lg-5 col-xs-12">Vendor Code</label>
                <div class="col-md-7 col-lg-7 col-xs-12">
                    @Html.DropDownList("vendor_id", (System.Web.Mvc.SelectList)ViewBag.vendor_list_code, htmlAttributes: new { @class = "form-control mickey vendor_id", multiple = "multiple" })

                </div>
            </div>
        </div>
        <div class=row>
            <div class="col-md-4 col-lg-4 col-xs-12">
                <label class="control-label col-md-5 col-lg-5 col-xs-12">Item/Service</label>
                <div class="col-md-7 col-lg-7 col-xs-12">
                    @Html.DropDownList("item_service_id", new List<SelectListItem>
                             {
                                new SelectListItem{ Text="Item", Value = "1" },
                                new SelectListItem{ Text="Service", Value = "2" }
                             }, new { @class = "form-control mickey item_service_id" })
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div id="searchresult">
            @Html.Partial("Partial_PurchaseInvoiceHeader", (object)ViewBag)
        </div>
    </div>
</div>


