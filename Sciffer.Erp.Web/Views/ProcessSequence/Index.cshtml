@using Sciffer.Erp.Domain.ViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Process Sequence</h2>
<hr />
<div>
    @(Html.EJ().Grid<process_sequence_vm>("Searching")

        .Datasource(ds => { ds.Json((IEnumerable<object>)ViewBag.ProcessSequence).RemoveURL(Url.Action("Delete", "ProcessSequence")).Adaptor(AdaptorType.RemoteSaveAdaptor); })
        .EditSettings(edit => { edit.AllowAdding().AllowDeleting().AllowEditing().EditMode(EditMode.InlineFormTemplate).ShowDeleteConfirmDialog(true); })
        .EnableAltRow().AllowPaging()
        .PageSettings(p => { p.PageSize(12); })
        .ToolbarSettings(toolBar => toolBar.ShowToolbar().ToolbarItems(items =>
        {
            items.AddTool(ToolBarItems.Add);
            items.AddTool(ToolBarItems.Edit);
            items.AddTool(ToolBarItems.ExcelExport);
            items.AddTool(ToolBarItems.PrintGrid);
        }))
        .Mappers(map => map.ExportToExcelAction(Url.Action("ExportToExcel", "Generic", new { ctrlname = "ProcessSequence" })))
        .AllowSorting()
        .AllowPaging()
        .IsResponsive()
        .AllowFiltering()
        .ShowColumnChooser()
        .AllowReordering()
        .AllowScrolling()
        .ScrollSettings(col => { col.Width("100%"); })
        .FilterSettings(filter => { filter.FilterType(FilterType.Excel); })
        .Columns(col =>
        {
            col.Field("process_sequence_id").Width("15%").HeaderText("ID").IsPrimaryKey(true).Width(80).Visible(false).ShowInColumnChooser(false).Add();
            col.Field("process_sequence_name").Width("15%").HeaderText("Process Sequence").Add();
            col.Field("ITEM_ID").Width("15%").Visible(false).ShowInColumnChooser(false).HeaderText("Item Id").Add();
            col.Field("ITEM_CODE").Width("15%").HeaderText("Item Code").Add();
            col.Field("is_blocked").Width("15%").HeaderText("Is Blocked").Add();

        }).ClientSideEvents(eve =>
        {
            eve.ActionBegin("actionBegin");
            eve.RightClick("rightClick");
        })
    )
</div>
<style>
    .e-editedrow {
        display: none;
    }

    .e-editcell {
        display: none;
    }
</style>

<script type="text/javascript">

    function actionBegin(args) {
        if (args.requestType == "beginedit") {
            location.href = "@Url.Action("Edit", "ProcessSequence")?id=" + args.rowData.process_sequence_id;
        }
        if (args.requestType == "add") {
            location.href = "@Url.Action("Create", "ProcessSequence")"
        }
    }
    @*function rightClick(args) {
        location.href = "@Url.Action("Details", "QualityControlParameter")?id="+ args.data.ITEM_ID;
    }*@

</script>
