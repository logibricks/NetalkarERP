                    <div class="form-group">
                        @Html.LabelFor(model => model.version, htmlAttributes: new { @class = "control-label col-md-4 col-sm-4 col-xs-12 " })
                        <div class="col-md-8 col-sm-8 col-xs-12">
                            @Html.EditorFor(model => model.version, new { htmlAttributes = new { @class = "form-control pull-right", @required = true } })
                            @Html.ValidationMessageFor(model => model.version, "", new { @class = "text-danger" })
                        </div>
