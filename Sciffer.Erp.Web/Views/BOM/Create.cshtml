            @*<div class="row">
                    <div class="col-lg-6 col-sm-6">
                        <div class="form-group">
                            <label class="col-md-4 col-sm-4 col-xs-12"> Blocked </label>
                            <div class="col-md-8 col-sm-8 col-xs-12">
                                <input type="checkbox" name="is_blocked" id="is_blocked" />
                            </div>
                        </div>
