                                    <div class="col-md-8 col-sm-8 col-xs-12">
                                        @*@Html.DropDownList("in_item", (System.Web.Mvc.SelectList)ViewBag.ItemList, "---Select---", new { @class = "form-control", @onchange = "GetUnit(this.value)" })*@
