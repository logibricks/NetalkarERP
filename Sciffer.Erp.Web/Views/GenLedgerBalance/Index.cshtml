
@using Sciffer.Erp.Domain.ViewModel

@{
    ViewBag.Title = "Index";
}

<br /><br /><br />
<div>
    @(Html.EJ().Grid<ref_general_ledger_balanceVM>("Searching")
        .Datasource(ds => { ds.Json((IEnumerable<object>)ViewBag.DataSource).RemoveURL(Url.Action("Delete", "GenLedgerBalance")).Adaptor(AdaptorType.RemoteSaveAdaptor); })
        .EditSettings(edit => { edit.AllowAdding().AllowDeleting().AllowEditing().EditMode(EditMode.InlineFormTemplate).ShowDeleteConfirmDialog(true); })
        .ToolbarSettings(toolBar => toolBar.ShowToolbar().ToolbarItems(items =>
        {
            items.AddTool(ToolBarItems.Add);
            items.AddTool(ToolBarItems.Edit);
            items.AddTool(ToolBarItems.ExcelExport);
            items.AddTool(ToolBarItems.PrintGrid);
        }))
        .Mappers(map => map.ExportToExcelAction(Url.Action("ExportToExcel", "Generic", new { ctrlname = "GeneralLedgerBalance" })))
        .AllowSorting()
        .AllowPaging()
        .IsResponsive()
        .AllowFiltering()
        .ShowColumnChooser()
        .AllowReordering()
         .AllowScrolling()
        .ScrollSettings(col => { col.Width("100%"); })
        .FilterSettings(filter => { filter.FilterType(FilterType.Excel); })
        .Columns(col =>
        {
            col.Field("gen_ledger_balance_id").Width("15%").HeaderText("ID").IsPrimaryKey(true).Width(80).Visible(false).Add();
            col.Field("category_id").Width("15%").HeaderText("Category ID").Visible(false).Width(100).Add();
            col.Field("category_name").Width("15%").HeaderText("Category").Width(100).Add();
            col.Field("doc_number").Width("15%").HeaderText("Document Number").Width(100).Add();
            col.Field("posting_date").Width("15%").HeaderText("Posting Date").Format("{0:dd/MM/yyyy}").Width(100).Add();
            col.Field("header_remark").Width("15%").HeaderText("Header remarks").Width(100).Add();
            col.Field("offset_account_id").Width("15%").HeaderText("Offset Account Id").Width(100).Visible(false).Add();
            col.Field("gl_ledger_code").Width("15%").HeaderText("Offset Account Code").Width(120).Add();
            col.Field("gl_ledger_name").Width("15%").HeaderText("Offset Account Name").Width(100).Add();
            
        }).ClientSideEvents(eve =>
        {
            eve.ActionBegin("actionBegin");
            eve.RightClick("rightClick");
        })
    )
</div>
<style>
    .e-editedrow {
        display: none;
    }

    .e-editcell {
        display: none;
    }
</style>

<script type="text/javascript">

    function actionBegin(args) {
        if (args.requestType == "beginedit")
        {
            location.href = "@Url.Action("Details", "GenLedgerBalance")?id=" + args.rowData.gen_ledger_balance_id;

        }
        if (args.requestType == "add") {
            location.href = "@Url.Action("Create", "GenLedgerBalance")";

        }
    }
    function rightClick(args) {
        location.href ="@Url.Action("Details", "GenLedgerBalance")?id=" + args.data.gen_ledger_balance_id;
    }

</script>
