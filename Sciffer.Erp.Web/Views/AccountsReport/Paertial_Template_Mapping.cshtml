@using Sciffer.Erp.Domain.ViewModel
@using Syncfusion.JavaScript.Models
@{(Html.EJ().Grid<accounts_report_vm>("Editing")

                                           .Datasource(ds => ds.URL(Url.Action("GetAccountsData", "AccountsReport") + "?entity=" + ViewBag.entity + "&entity_type_id=" + ViewBag.entity_type_id + "&entity_id=" + ViewBag.entity_id).Adaptor(AdaptorType.UrlAdaptor))
                                           .Mappers(map => map.ExportToExcelAction(Url.Action("ExportToExcel", "AccountsReport", new { ctrlname = "TemplateMapping" })))

                                            .AllowPaging().PageSettings(a => a.PageSize(30))
                                            .AllowFiltering()
                                            .FilterSettings(X => X.FilterType(FilterType.Excel))
                                            .ShowColumnChooser()
                                            .AllowSorting()
                                            .AllowScrolling()

                                                    .ToolbarSettings(toolbar =>
                                                    {
                                                        toolbar.ShowToolbar().ToolbarItems(items =>
                                                        {
                                                            items.AddTool(ToolBarItems.Search);
                                                            items.AddTool(ToolBarItems.ExcelExport);
                                                            items.AddTool(ToolBarItems.PrintGrid);
                                                        });
                                                    })
                                            .Columns(col =>
                                            {

                                                col.Field("entity_name").Width("15%").HeaderText("Group Name").Add();
                                                col.Field("gl_ledger_code").Width("15%").HeaderText("GL Ledger Code").Add();
                                                col.Field("gl_ledger_name").Width("15%").HeaderText("GL Ledger Name").Add();

                                            })
                                            .ClientSideEvents(eve => { eve.ToolbarClick("OnToolbarClicka"); })
                                                                                                ).Render();}
@Html.EJ().ScriptManager()
