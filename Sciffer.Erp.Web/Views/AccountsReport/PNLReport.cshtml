
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class=row>
            <div class="col-md-4 col-lg-4 col-xs-12">
                <div class="form-group">
                    <label class="control-label col-md-3 col-lg-3 col-xs-12">Template</label>
                    <div class="col-md-9 col-lg-9 col-xs-12">
                        @Html.DropDownList("entity_type_id", (System.Web.Mvc.SelectList)ViewBag.TemplateList, htmlAttributes: new { @class = "form-control entity_type_id" })
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-lg-3 col-xs-12">
                <label class="control-label col-md-5 col-lg-5 col-xs-12">From Date</label>
                <div class="col-md-7 col-lg-7 col-xs-12">
                    <input type="date" id="fromDate" class="form-control radius" required="required">
                </div>
            </div>
            <div class="col-md-3 col-lg-3 col-xs-12">
                <label class="control-label col-md-5 col-lg-5 col-xs-12">To Date</label>
                <div class="col-md-7 col-lg-7 col-xs-12">
                    <input type="date" id="toDate" class="form-control radius" required="required">
                    <input type="hidden" id="entity" value="getpnlbalancesheet">
                    <input type="hidden" id="entity_id" class="entity_id" value="2">
                    <input type="hidden" id="partial_v" value="Partial_PNL_Report" />
                </div>
            </div>
            <div class="col-md-2 col-lg-2 col-xs-12">
                <button class="searchbutton searchButton" id="search" onclick="DateChecka()"> &nbsp; Run Report </button>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-lg-4 col-xs-12">
                <label class="control-label col-md-3 col-lg-3 col-xs-12">GL Wise</label>
                <div class="col-md-9 col-lg-9 col-xs-12">
                    <select name="" id="priority_id" class="form-control priority_id">
                        <option value="-1">Yes</option>
                        <option value="0">No</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div id="searchresult">
            @Html.Partial("Partial_PNL_Report", (object)ViewBag)
        </div>
    </div>
</div>

