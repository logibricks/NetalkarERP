        $(".add").on("click", function (event) {
            var t = $('#ContactGrid').DataTable()
            var rowCount = t.fnGetData().length;
            var sr_no = rowCount + 1;
            var item_id = $("#item_id").val();
            var item_name = $('#item_id option:selected').text();
            var unit_id = $("#Uom_id").val();
            var unit = $("#Uom_id").find("option:selected").text();
            var cost_center_id = $('#cost_center_id').val();
            var cost_center_name = $("#cost_center_id option:selected").text();
            var machine_id = $('#machine_id').val();
            var machine_name = $('#machine_id option:selected').text();
            var reason_id = $('#reason_id').val();
            var reason_name = $('#reason_id option:selected').text();
            var order_type_id = $('#order_type').val();
            var order_type_name = $('#order_type option:selected').text();
            var order_number = $('#order_number').val();
            var line_remarks = $('#line_remarks').val();
            var required_qty = $('#required_qty').val();

            var crankshaft_id = $('#crankshaft_id').val();
            var crankshaft_name = $('#crankshaft_id option:selected').text();
            var process_id = $('#process_id').val();
            var process_name = $('#process_id option:selected').text();
            var tool_usage_type_id = $('#tool_usage_type_id').val();
            var tool_usage_type_name = $('#tool_usage_type_id option:selected').text();
            var tool_category_id = $('#tool_category_id').val();
            var tool_category_name = $('#tool_category_id option:selected').text();

            console.log(item_id);

            if (cost_center_id == '') {
                cost_center_name = '';
            }
            if (cost_center_id == '') {
                cost_center_name = '';
            }
            if (machine_id == '') {
                machine_name = '';
            }
            if (reason_id == '') {
                reason_name = '';
            }
            if (order_type_id == '') {
                order_type_name = '';
            }
            if (crankshaft_id == '') {
                crankshaft_name = '';
            }
            if (process_id == '') {
                process_name = '';
            }
            if (tool_usage_type_id == '') {
                tool_usage_type_name = '';
            }
            if (tool_category_id == '') {
                tool_category_name = '';
            }


            if (item_id == '') {
                swal("", "Please Select Item Name.", "error");
                return false;
            }
            if (unit_id == '') {
                swal("", "Please Select UoM.", "error");
                return false;
            }
            if (required_qty == '') {
                swal("", "Please enter Required Qty.", "error");
                return false;
            }
            if (required_qty == '0') {
                swal("", "Required Qty has to be greater than zero.", "error");
                return false;
            }

            if (order_type_id != '') {
                if (order_number == '') {
                    swal("", "Please enter Order Number.", "error");
                    return false;
                }
            }

            if ($("#srno").val() == "") {
                t.fnAddData(['', sr_no, item_id, item_name, unit_id, unit, parseFloat(required_qty).toFixed(2), cost_center_id, cost_center_name,
                    machine_id, machine_name, reason_id, reason_name, order_type_id, order_type_name, order_number, line_remarks,
