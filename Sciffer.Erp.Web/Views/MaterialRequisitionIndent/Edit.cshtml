    <script src="~/Scripts/requirevalidation.js"></script>
    <script src="~/Scripts/RemoveUnexpectedFile.js"></script>
    <script type="text/javascript">

        var role=@Html.Raw(Json.Encode(ViewBag.role));
        
        if(role =="Operator")
        {
            $("#sidebar-menu").css("display", "none");       
            $("#menu_toggle").trigger("click");
            $("#menu_toggle").css("display", "none");
            $(".site_title").click(function () { return false; });
        }

        $(document).ready(function () {
            var t = $('#ContactGrid').DataTable();
            var si_detail = @Html.Raw(JsonConvert.SerializeObject(this.Model));
            var i=1;
            console.log(si_detail);
            $.each(si_detail.material_requision_note_detail, function(key, value) {
                t.fnAddData([value.material_requision_note_detail_id, i, value.REF_ITEM.ITEM_ID, value.REF_ITEM.ITEM_CODE +'-'+value.REF_ITEM.ITEM_NAME,
