
@{
    ViewBag.Title = "Index";
}
<input type="search" class="search form-control" placeholder="Search Sales Report" id="s" style="width:350px;">
<br />
<div id="hide">
    <div class="row display-flex">
        <div class="col-lg-3">
            <div class="panel panel-green" style="border-color: #5cb85c;">
                <div class="name panel-heading" style="background-color: #5cb85c;color: #fff;font-size:20px;">
                    Payment Summary
                </div>
                <div class="panel-body">
                    <p style="font-size:15px;">Provides summary of Payments for a selected period alongwith Payment method and reference</p>
                </div>
                <a href="@Url.Action("paymentsummary", "bankingreport")" target="_blank">
                    <div class="panel-footer" style="font-size:20px; color:#000;">
                        Run Report
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="panel panel-green" style="border-color: #f0ad4e;">
                <div class="name panel-heading" style="background-color: #f0ad4e;color: #fff;font-size:20px;">
                    Receipt Summary
                </div>
                <div class="panel-body">
                    <p style="font-size:15px;">Provides summary of Receipt for a selected period alongwith payment method and reference </p>
                </div>
                <a href="@Url.Action("receiptsummary", "bankingreport")" target="_blank">
                    <div class="panel-footer" style="font-size:20px; color:#000;">
                        Run Report
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="panel panel-green" style="border-color: #d9534f;">
                <div class="name panel-heading" style="background-color: #d9534f;color: #fff;font-size:20px;">
                    Receipt Detail
                </div>
                <div class="panel-body">
                    <p style="font-size:15px;"> Provides details report of receipts alongwith the details of documents adjusted </p>
                </div>
                <a href="@Url.Action("ReceiptDetail", "bankingreport")" target="_blank">
                    <div class="panel-footer" style="font-size:20px; color:#000;">
                        Run Report
                    </div>
                </a>
            </div>
        </div>

        <div class="col-lg-3">
            <div class="panel panel-green" style="border-color: #337ab7;">
                <div class="name panel-heading" style="background-color: #337ab7;color: #fff;font-size:20px;">
                    Payment Detail
                </div>
                <div class="panel-body">
                    <p style="font-size:15px;">Provides details report of payments alongwith the details of documents adjusted </p>
                </div>
                <a href="@Url.Action("PaymentDetail", "bankingreport")" target="_blank">
                    <div class="panel-footer" style="font-size:20px; color:#000;">
                        Run Report
                    </div>
                </a>
            </div>
        </div>
    
            <div class="col-lg-3">
                <div class="panel panel-green" style="border-color: #5cb85c;">
                    <div class="name panel-heading" style="background-color: #5cb85c;color: #fff;font-size:20px;">
                        Contra Entries Detail
                    </div>
                    <div class="panel-body">
                        <p style="font-size:15px;">Provides details of Contra Entries</p>
                    </div>
                    <a href="@Url.Action("ContraEntriesDetail", "bankingreport")" target="_blank">
                        <div class="panel-footer" style="font-size:20px; color:#000;">
                            Run Report
                        </div>
                    </a>
                </div>
          
        </div>
    </div>
</div>
<script src="~/Scripts/requirevalidation.js"></script>
<script src="~/Scripts/RemoveUnexpectedFile.js"></script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(document).ready(function () {
            $("#s").on("keyup click input", function () {
                if (this.value.length > 0) {
                    $(".col-lg-3").show().filter(function () {
                        return $(this).find('.name').text().toLowerCase().indexOf($("#s").val().toLowerCase()) == -1;
                    }).hide();
                }
                else {
                    $(".col-lg-3").show();
                }
            });

        });
    </script>
    <style>
        .row.display-flex {
            display: flex;
            flex-wrap: wrap;
        }

            .row.display-flex > [class*='col-'] {
                display: flex;
                flex-direction: column;
            }

        .panel {
            height: 100%;
            width: 100%;
        }
    </style>


}




