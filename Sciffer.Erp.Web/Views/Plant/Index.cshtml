@using Sciffer.Erp.Domain.ViewModel

@{
    ViewBag.Title = "Index";
}
<br /><br /><br />
<div>
    @(Html.EJ().Grid<plant_vm>("Searching")
         .Datasource(ds => ds.URL(Url.Action("GetIndexData", "Generic", new { @ctrl_name = "Plant" }))
         .EnableCaching()
        .CachingPageSize(4)
        .TimeTillExpiration(120000)
        .Adaptor(AdaptorType.UrlAdaptor))
        .EditSettings(edit => { edit.AllowAdding().AllowDeleting().AllowEditing().EditMode(EditMode.InlineFormTemplate).ShowDeleteConfirmDialog(true); })
        .ToolbarSettings(toolBar => toolBar.ShowToolbar().ToolbarItems(items =>
        {
            items.AddTool(ToolBarItems.Add);
            items.AddTool(ToolBarItems.Edit);
            items.AddTool(ToolBarItems.ExcelExport);
            items.AddTool(ToolBarItems.PrintGrid);
        }))
        .Mappers(map => map.ExportToExcelAction(Url.Action("ExportToExcel","Generic",new { ctrlname = "Plant" })))
        .AllowSorting()
       .AllowPaging().PageSettings(a => a.PageSize(20))
        .IsResponsive()
        .AllowFiltering()
        .ShowColumnChooser()
        .AllowReordering()
        .AllowScrolling()
        .ScrollSettings(col => { col.Width("100%"); })
        .FilterSettings(filter => { filter.FilterType(FilterType.Excel); })
        .Columns(col =>
        {
            col.Field("PLANT_ID").Width("15%").HeaderText("ID").IsPrimaryKey(true).Width(80).Visible(false).Add();
            col.Field("PLANT_CODE").Width("15%").HeaderText("Code").Add();
            col.Field("PLANT_NAME").Width("15%").HeaderText("Description").Add();
            col.Field("PLANT_ADDRESS").Width("15%").HeaderText("Address").Add();
            col.Field("PLANT_CITY").Width("15%").HeaderText("City").Add();
            col.Field("PLANT_STATE").Width("15%").HeaderText("State").Visible(false).Add();
            col.Field("pincode").Width("15%").HeaderText("Pin Code").Visible(false).Add();
            col.Field("telephone_cdoe").Width("15%").HeaderText("Telephone Code").Visible(false).Add();
            col.Field("PLANT_COUNTRY").Width("15%").HeaderText("Country").Visible(false).Add();
            col.Field("PLANT_TELEPHONE").Width("15%").HeaderText("Telephone").Visible(false).Add();
            col.Field("PLANT_MOBILE").Width("15%").HeaderText("Mobile").Visible(false).Add();
            col.Field("PLANT_EMAIL").Width("15%").HeaderText("Email").Visible(false).Add();
            col.Field("excise_number").Width("15%").HeaderText("Excise Number").Visible(false).Add();
            col.Field("excise_range").Width("15%").HeaderText("Excise Range").Visible(false).Add();
            col.Field("excise_division").Width("15%").HeaderText("Excise Division").Visible(false).Add();
            col.Field("excise_commisionerate").Width("15%").HeaderText("Excise Commissionerate").Visible(false).Add();
            col.Field("service_tax_number").Width("15%").HeaderText("Service Tax Number").Visible(false).Add();
            col.Field("cst_number").Width("15%").HeaderText("CST Number").Visible(false).Add();
            col.Field("gst_number").Width("15%").HeaderText("GST Number").Visible(false).Add();
            col.Field("vat_number").Width("15%").HeaderText("VAT Number").Visible(false).Add();

        }).ClientSideEvents(eve =>
        {
            eve.ActionBegin("actionBegin");
            eve.RightClick("rightClick");
        })
    )
</div>
<style>
    .e-editedrow {
        display: none;
    }
        .e-editcell{
        display:none;
    }
</style>

<script type="text/javascript">

    function actionBegin(args) {
        if (args.requestType == "beginedit")
        {
            location.href = "@Url.Action("Edit", "Plant")?id=" + args.rowData.PLANT_ID;
        }
        if (args.requestType == "add") {
            location.href = "@Url.Action("Create", "Plant")";
        }
    }
    function rightClick(args) {
        location.href = "@Url.Action("Details", "Plant")?id="+ args.data.PLANT_ID;
    }
</script>
