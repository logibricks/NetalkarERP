
@model Sciffer.Erp.Domain.ViewModel.REF_PLANT_VM
@{
    if (ViewBag.Count == null)
    {
        ViewBag.Count = 0;
    }
    int count = ViewBag.Count;
}
<tr>
    <td hidden>
        <div class="form-group">
            <div class="col-md-12">
                @Html.EditorFor(model => model.ATTRIBUTE_VM[count].ATTRIBUTE_ID, new { htmlAttributes = new { @class = "form-control" } })

            </div>
        </div>
    </td>
    <td>
        <div class="form-group">
            <div class="col-md-12">
                @Html.DisplayFor(model => model.ATTRIBUTE_VM[count].ATTRIBUTE_NAME, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ATTRIBUTE_VM[count].ATTRIBUTE_NAME, "", new { @class = "text-danger" })
            </div>
        </div>
    </td>
    <td>
        <div class="form-group">
            <div class="col-md-12">
                @Html.EditorFor(model => model.ATTRIBUTE_VM[count].ATTRIBUTE_VALUE, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
    </td>
</tr>
