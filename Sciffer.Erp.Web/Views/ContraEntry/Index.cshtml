
@using Sciffer.Erp.Domain.ViewModel

@{
    ViewBag.Title = "Index";
}

<br /><br /><br />
<div>
    @(Html.EJ().Grid<fin_contra_entry_vm>("Searching")
        .Datasource(ds => ds.URL(Url.Action("GetIndexData", "Generic", new { @ctrl_name = "ContraEntry" }))
         .EnableCaching()
        .CachingPageSize(4)
        .TimeTillExpiration(120000)
        .Adaptor(AdaptorType.UrlAdaptor))
        .EditSettings(edit => { edit.AllowAdding().AllowDeleting().AllowEditing().EditMode(EditMode.InlineFormTemplate); })
        .ToolbarSettings(toolBar => toolBar.ShowToolbar().ToolbarItems(items =>
        {
            items.AddTool(ToolBarItems.Add);
            items.AddTool(ToolBarItems.Edit);
            items.AddTool(ToolBarItems.ExcelExport);
            items.AddTool(ToolBarItems.PrintGrid);
        }))
        .Mappers(map => map.ExportToExcelAction(Url.Action("ExportToExcel", "Generic", new { ctrlname = "ContraEntry" }))
        .ExportToPdfAction(Url.Action("ExportToPdf", "Generic", new { ctrlname = "ContraEntry" })).ExportToWordAction(Url.Action("ExportToWord", "Generic", new { ctrlname = "ContraEntry" })))
        .AllowSorting()
       .AllowPaging().PageSettings(a => a.PageSize(20))
        .IsResponsive()
        .AllowFiltering()
        .ShowColumnChooser()
        .AllowReordering()
        .AllowScrolling()
        .ScrollSettings(col => { col.Width("100%"); })
        .FilterSettings(filter => { filter.FilterType(FilterType.Excel); })
        .Columns(col =>
        {
            col.Field("contra_entry_id").Width("15%").HeaderText("ID").Visible(false).IsPrimaryKey(true).Add();
            col.Field("category_name").Width("15%").HeaderText("Category").Add();
            col.Field("document_no").Width("15%").HeaderText("Document No").Add();
            col.Field("posting_date").Width("15%").HeaderText("Posting Date").Format("{0:dd/MM/yyyy}").Add();
            col.Field("ref_doc_no").Width("15%").HeaderText("Ref Doc. No").Add();
            col.Field("document_date").Width("15%").HeaderText("Document Date").Format("{0:dd/MM/yyyy}").Visible(false).Add();
            col.Field("transfer_funds_from_name").Width("15%").HeaderText("Transfer From").Visible(true).Add();
            col.Field("transfer_funds_to_name").Width("15%").HeaderText("Transfer To").Visible(true).Add();
            col.Field("transfer_amount").Width("15%").HeaderText("Transfer Amount").Visible(true).TextAlign(TextAlign.Right).Add();
            col.Field("current_balance_from").Width("15%").HeaderText("Current Balance From").Visible(true).TextAlign(TextAlign.Right).Add();
            col.Field("current_balance_to").Width("15%").HeaderText("Current Balance To").Visible(true).TextAlign(TextAlign.Right).Add();
            col.Field("curreny_name").Width("15%").HeaderText("Currency").Add();
            col.Field("reamrks").Width("15%").HeaderText("Remarks").Visible(false).Add();
            col.Field("status_name").Width("15%").HeaderText("Status").Visible(false).Add();
        }).ClientSideEvents(eve =>
        {
            eve.ActionBegin("actionBegin");
            eve.RightClick("rightClick");
        })
    )
</div>
<style>
    .e-editedrow {
        display: none;
    }

    .e-editcell {
        display: none;
    }
</style>

<script type="text/javascript">

    function actionBegin(args) {
        if (args.requestType == "beginedit")
        {
            location.href = '@Url.Action("Edit", "ContraEntry")?id=' + args.rowData.contra_entry_id;

        }
        if (args.requestType == "add") {
            location.href = '@Url.Action("Create", "ContraEntry")';
        }
    }
    function rightClick(args) {
        location.href = '@Url.Action("Details", "ContraEntry")?id=' + args.data.contra_entry_id;
    }

    $(document).ready(function(){
        var doc_no= '@ViewBag.doc';
        if (doc_no != '') {
            if (doc_no != 0) {
                sweetAlert("", doc_no ,"success");
            }
        }
    });

</script>

