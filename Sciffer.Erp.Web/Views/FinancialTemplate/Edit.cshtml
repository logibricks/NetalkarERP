            ]
        });
        function clearmodel1() {
            $("#srno1").val('')
            $("#bs_pl_side1").val('0').trigger('change');
            $("#group_name1").val('');
            $("#main_heading1").prop('checked', false);
            $("#parent_id1").val('').trigger('change');
            $(".pparent").show();
        }
