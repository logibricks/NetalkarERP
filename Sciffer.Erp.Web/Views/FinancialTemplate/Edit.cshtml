@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/RemoveUnexpectedFile.js"></script>
    <script src="~/Scripts/requirevalidation.js"></script>
    <script type="text/javascript">
        $(document).ready(function(){
            var details = @Html.Raw(JsonConvert.SerializeObject(this.Model));
            //console.log(details);
            $("#template_id").val(details.template_id);
            $("#template_name").val(details.template_name);
            if(details.t_format == true){
                $("#t_format").prop('checked',true);
            }
            else{
                $("#t_format").prop('checked',false);
            }
            $("#t_format").checkboxpicker();

            var s = $('#ContactGrid1').DataTable();
            var t = $("#ContactGrid2").DataTable();
            $.each(details.ref_fin_template_detail,function(key,value){
                if(value.bs_pl == 1){
                    s.fnAddData([value.template_detail_id,value.bs_pl_side,value.group_id, value.group_name, value.main_heading, value.parent_id, value.bs_pl]);
                }
                else{
                    t.fnAddData([value.template_detail_id,value.bs_pl_side,value.group_id, value.group_name, value.main_heading, value.parent_id, value.bs_pl]);
                }
            });
            start();

        });
        function start() {
            // Bind all li
            $('#tab-content li').bind('click', mouseHandler);
        }

        function mouseHandler(e) {
            // Add Picked Class
            if ($(this).hasClass('picked')) {
                $(this).removeClass('picked');
                return true;
            } else {
                $(".picked").removeClass('picked');
                $(this).addClass('picked');
                var value1 = $(this).attr('id');
                $("#edit").val(value1);
                $("#child").val(value1);
                $("#edit1").val(value1);
                $("#child1").val(value1);
            }
        }

        function EditCall1(id) {
            clearmodel();
            if (id == undefined) {
                sweetAlert("", "Select row to edit!", "error");
            }
            else {
                var t = $('#ContactGrid2').DataTable();
                var rowCount = t.fnGetData().length;

                for (var i = 0; i < rowCount; i++) {
                    if (parseFloat(t.fnGetData(i, 0)) == parseFloat(id)) {
                        $("#bs_pl_side1").val(t.fnGetData(i, 1)).trigger('change');
                        $("#group_id1").val(t.fnGetData(i, 2))
                        $("#group_name1").val(t.fnGetData(i, 3));
                        $("#srno1").val(i + 1);
                        $("#parent_id1").empty();
                        if (t.fnGetData(i, 4) == 1) {
                            $("#main_heading1").prop("checked", true);
                            $(".pparent").hide();
                        }
                        else {
                            $("#main_heading1").prop("checked", false);
                            $(".pparent").show();
                            $("#parent_id1").append(
                              $('<option></option>').val(t.fnGetData(i - 1, 2)).html(t.fnGetData(i - 1, 3)));
                            $("#parent_id1").val(t.fnGetData(i, 5));
                        }
                        $('#main_heading1').checkboxpicker();
                        
                        var p = i;
                    }
                }

                for (var j = 0; j < p - 1; j++) {
                    $("#parent_id1").append(
                              $('<option></option>').val(t.fnGetData(j, 2)).html(t.fnGetData(j, 3)));
                }
            }
            $("#balancesheet1").show();
        }

        function EditCall(id) {
            clearmodel1();
            if (id == undefined) {
                sweetAlert("", "Select row to edit!", "error");
            }
            else {
                var t = $('#ContactGrid1').DataTable();
                var rowCount = t.fnGetData().length;

                for (var i = 0; i < rowCount; i++) {
                    if (parseFloat(t.fnGetData(i, 0)) == parseFloat(id)) {
                        $("#bs_pl_side").val(t.fnGetData(i, 1)).trigger('change');
                        $("#group_id").val(t.fnGetData(i, 2))
                        $("#group_name").val(t.fnGetData(i, 3));
                        $("#srno").val(i + 1);
                        $("#parent_id").empty();
                        if (t.fnGetData(i, 4) == 1) {
                            $("#main_heading").prop("checked", true);
                            $(".bparent").hide();
                        }
                        else {
                            $("#main_heading").prop("checked", false);
                            $(".bparent").show();
                            $("#parent_id").append(
                              $('<option></option>').val(t.fnGetData(i - 1, 2)).html(t.fnGetData(i - 1, 3)));
                            $("#parent_id").val(t.fnGetData(i, 5));
                        }
                        $('#main_heading').checkboxpicker();                        
                        var p = i;
                    }
                }

                for (var j = 0; j < p - 1; j++) {
                    $("#parent_id").append(
                              $('<option></option>').val(t.fnGetData(j, 2)).html(t.fnGetData(j, 3)));
                }
            }
            $("#balancesheet").show();
        }

        $('#ContactGrid2').DataTable({

            "bPaginate": false,
            "ordering": false,
            "bfooter": false,
            "info": false,
            "bLengthChange": false,
            "bAutoWidth": false,
            "bFilter": false,
