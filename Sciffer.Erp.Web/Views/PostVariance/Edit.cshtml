@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/RemoveUnexpectedFile.js"></script>
    <script src="~/Scripts/requirevalidation.js"></script>
    <link href="~/Content/select2.min.css" rel="stylesheet" />

    <script type="text/javascript">
        $(document).ready(function () {
            document.getElementById("posting_date").valueAsDate = new Date();
            document.getElementById("document_date").valueAsDate = new Date();

            $("#plant_id").select2({
                placeholder: "Select Plant",
                allowClear: true
            });
            $("#sloc_id").select2({
                placeholder: "Select Storage",
                allowClear: true
            });
            $("#bucket_id").select2({
                placeholder: "Select Bucket",
                allowClear: true
            });
            $("#category_id").select2({
                placeholder: "Select Category",
                allowClear: true
            });
            $("#status_id").select2({
                placeholder: "Select Status",
                allowClear: true
            });
            $("#create_stock_sheet_id").select2({
                placeholder: "Select Stock Sheet",
                allowClear: true
            });
            $("#update_stock_count_id").select2({
                placeholder: "Select Update Stock Sheet",
                allowClear: true
            });
        });
        $('#stock_quantity_grater_than_0').dataTable({
            "bPaginate": false,
            "ordering": false,
            "bfooter": false,
            "info": false,
            "bLengthChange": false,
            "bAutoWidth": false,
            "bFilter": false,
            "bSort": false,
            "columns": [
                { "data": "create_stock_sheet_detail_id", bVisible: false, "title": "Stock Sheet Detail ID" },
                { "data": "item_id", bVisible: true, bVisible: false, "title": "Item ID" },
                { "data": "item_code", bVisible: true, "title": "Item Code" },
                { "data": "uom_id", bVisible: true, bVisible: false, "title": "UoM ID" },
                { "data": "UOM", bVisible: true, "title": "UoM" },
                { "data": "batch_number", bVisible: true, "title": "Batch No" },
                { "data": "stock_qty", bVisible: true, "title": "Stock Quantity", width: "8%", sClass: "right" },
                { "data": "actual_qty", bVisible: true, "title": "Actual Quantity", width: "8%", sClass: "right" },
                { "data": "diff_qty", bVisible: true, "title": "Diff Quantity", width: "8%", sClass: "right" },
                { "data": "rate", bVisible: true, "title": "Rate", width: "8%", sClass: "right" },
                { "data": "value", bVisible: true, "title": "Value", width: "8%", sClass: "right" },
            ],
        });
        function TableToJeson() {

            $("#ParameterData").empty();

            var t1 = $('#stock_quantity_grater_than_0').DataTable();
            var rowCount1 = t1.fnGetData().length;

            for (var i = 0; i < rowCount1; i++) {

                $("#ParameterData").append('<input type="hidden" id="post_variances_detail_id' + i + '" name="post_variances_detail_id">');
                $("#ParameterData").append('<input type="hidden" id="create_stock_sheet_detail_id' + i + '" name="create_stock_sheet_detail_id">');
                $("#ParameterData").append('<input type="hidden" id="item_id' + i + '" name="item_id">');
                $("#ParameterData").append('<input type="hidden" id="uom_id' + i + '" name="uom_id">');
                $("#ParameterData").append('<input type="hidden" id="batch_number' + i + '" name="batch_number">');
                $("#ParameterData").append('<input type="hidden" id="stock_qty' + i + '" name="stock_qty">');
                $("#ParameterData").append('<input type="hidden" id="actual_qty' + i + '" name="actual_qty">');
                $("#ParameterData").append('<input type="hidden" id="diff_qty' + i + '" name="diff_qty">');
                $("#ParameterData").append('<input type="hidden" id="rate' + i + '" name="rate">');
                $("#ParameterData").append('<input type="hidden" id="value' + i + '" name="value">');

                $("#post_variances_detail_id" + i).val(-1);
                $("#create_stock_sheet_detail_id" + i).val(t1.fnGetData(i, 0));
                $("#item_id" + i).val(t1.fnGetData(i, 1));
                $("#uom_id" + i).val(t1.fnGetData(i, 3));
                $("#batch_number" + i).val(t1.fnGetData(i, 5));
                $("#stock_qty" + i).val(t1.fnGetData(i, 6));
                $("#actual_qty" + i).val(t1.fnGetData(i, 7));
                $("#diff_qty" + i).val(t1.fnGetData(i, 8));
                $("#rate" + i).val(t1.fnGetData(i, 9));
                $("#value" + i).val(t1.fnGetData(i, 10));
            }
        }

        function GetCreateStockData(id) {
            if (id == "") {
                id = 0;
            }
            $.ajax({
                url: '@Url.Action("GetUpdateStockDocList", "UpdateStockSheet")',
                type: "GET",
                dataType: "JSON",
                data: { id: id },
                success: function (data) {
                    $("#update_stock_count_id").html(""); // clear before appending new list
                    $("#update_stock_count_id").append($('<option></option>').val("").html("---Select---"));
                    $.each(data, function (i, cycle) {
                        $("#update_stock_count_id").append(
                            $('<option></option>').val(cycle.update_stock_count_id).html(cycle.doc_number));
                    });
                    $("#update_stock_count_id").val('').trigger('change');
                }
            });
        }

        var id = $("#update_stock_count_id").val();
        $.ajax({
            url: '@Url.Action("UpdateStockSheetDetails", "UpdateStockSheet")',
            type: "GET",
            dataType: "JSON",
            data: { id: id },
            success: function (data) {

                $("#bucket_id").val(data.bucket_id).trigger('change');
                $("#sloc_id").val(data.sloc_id).trigger('change');

                var stock_grater_than_zero = $('#stock_quantity_grater_than_0').DataTable();
                stock_grater_than_zero.fnClearTable();
                stock_grater_than_zero.fnAddData(data.update_stock_sheet_detail_vm);
            }
        });
    </script>

}