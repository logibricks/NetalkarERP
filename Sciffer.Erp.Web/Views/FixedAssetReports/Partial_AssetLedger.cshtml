
@using Sciffer.Erp.Domain.ViewModel
@using Syncfusion.JavaScript.Models

@{(Html.EJ().Grid<fixed_asset_report_vm>("Editing")
                        .Datasource(ds => ds.URL(Url.Action("FixedAssetReport", "FixedAssetReports") + "?entity=" + ViewBag.entity + "&from_date=" + ViewBag.from_date + "&to_date=" + ViewBag.to_date + "&depreciation_type=" + ViewBag.depreciation_type + "&asset_code_id=" + ViewBag.asset_code_id + "&depreciation_area_id=" + ViewBag.depreciation_area_id + "&asset_class_id=" + ViewBag.asset_class_id + "&asset_group_id=" + ViewBag.asset_group_id).Adaptor(AdaptorType.UrlAdaptor))
                            .AllowPaging().PageSettings(a => a.PageSize(20))
                                .AllowFiltering()
                                    .FilterSettings(X => X.FilterType(FilterType.Excel))
                                .ShowColumnChooser()
                                .AllowSorting()
                                .AllowScrolling()
                                .Mappers(map => map.ExportToExcelAction(Url.Action("ExportToExcel", "InventoryReport", new { ctrlname = "InventoryledgerDetailedReport" })))
                                .ScrollSettings(scroll => { scroll.Width("100%"); })

                            .ToolbarSettings(toolbar =>
                            {
                                toolbar.ShowToolbar().ToolbarItems(items =>
                                {
                                    items.AddTool(ToolBarItems.Search);
                                    items.AddTool(ToolBarItems.ExcelExport);
                                    items.AddTool(ToolBarItems.PrintGrid);
                                });
                            })
                    .Columns(col =>

                    {
                        col.Field("TransactionName").Width("15%").HeaderText("Transaction").Add();
                        col.Field("PostingDate").Width("15%").HeaderText("Date").Format("{0:dd/MM/yyyy}").Add();
                        col.Field("asset_code").Width("15%").HeaderText("Document No").Add();
                        col.Field("amount").Width("15%").HeaderText("Value").TextAlign(TextAlign.Right).Add();
                        col.Field("closingValue").Width("15%").HeaderText("Closing Value").TextAlign(TextAlign.Right).Add();
                        col.Field("remark").Width("15%").HeaderText("Remark").Add();
                    })
                        .ClientSideEvents(eve => { eve.ToolbarClick("OnToolbarClicki"); })
                                                            ).Render();}
@Html.EJ().ScriptManager()
