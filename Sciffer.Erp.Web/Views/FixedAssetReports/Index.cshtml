

@{
    ViewBag.Title = "Index";
}
<input type="search" class="search form-control" placeholder="Search Customized Report" id="s" ; style="width:23.5%;">
<br />
<div id="hide">
    <div class="row display-flex">
        <div class="col-lg-3">
            <div class="panel panel-green" style="border-color: #5cb85c;">
                <div class="name panel-heading" style="background-color: #5cb85c;color: #fff;">
                    Fixed Asset Block Report
                </div>
                <div class="panel-body">
                    <p>Fixed Asset Block Report</p>
                </div>
                <a href="@Url.Action("FixedAssetBlockReport", "FixedAssetReport")" target="_blank">
                    <div class="panel-footer">
                        Run Report
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="panel panel-green" style="border-color: #f0ad4e;">
                <div class="name panel-heading" style="background-color: #f0ad4e;color: #fff;">
                     Asset Ledger Report
                </div>
                <div class="panel-body">
                    <p> Asset Ledger Report </p>
                </div>
                <a href="@Url.Action("AssetLedgerReport", "FixedAssetReport")" target="_blank">
                    <div class="panel-footer">
                        Run Report
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="panel panel-green" style="border-color: #d9534f;">
                <div class="name panel-heading" style="background-color: #d9534f;color: #fff;">
                    List of Additions Report
                </div>
                <div class="panel-body">
                    <p>List of Additions Report</p>
                </div>
                <a href="@Url.Action("ListofAdditionsReport", "FixedAssetReport")" target="_blank">
                    <div class="panel-footer">
                        Run Report
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="panel panel-green" style="border-color: #337ab7;">
                <div class="name panel-heading" style="background-color: #337ab7;color: #fff;">
                    List of Deletion Report
                </div>
                <div class="panel-body">
                    <p>List of deletion Report</p>
                </div>
                <a href="@Url.Action("ListofDeletionReport", "FixedAssetReport")" target="_blank">
                    <div class="panel-footer">
                        Run Report
                    </div>
                </a>
            </div>
        </div>

    </div>
</div>
<script src="~/Scripts/requirevalidation.js"></script>
<script src="~/Scripts/RemoveUnexpectedFile.js"></script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
            $(document).ready(function () {
                $("#s").on("keyup click input", function () {
                    if (this.value.length > 0) {
                        $(".col-lg-3").show().filter(function () {
                            return $(this).find('.name').text().toLowerCase().indexOf($("#s").val().toLowerCase()) == -1;
                        }).hide();
                    }
                    else {
                        $(".col-lg-3").show();
                    }
                });

            });
    </script>
    <style>
        .row.display-flex {
            display: flex;
            flex-wrap: wrap;
        }

            .row.display-flex > [class*='col-'] {
                display: flex;
                flex-direction: column;
            }

        .panel {
            height: 100%;
            width: 100%;
        }

        .name {
            font-size: 15px;
            background-color: #5cb85c;
            color: #fff;
        }

        .panel-heading {
            height: 38px;
        }

        .panel-body {
            height: 90px;
        }

        p {
            font-size: 13px;
        }

        .panel-footer {
            font-size: 15px;
            color: #000;
            height: 40px;
        }

        }
    