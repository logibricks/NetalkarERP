@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/requirevalidation.js"></script>
    <script type="text/javascript">

        //CANCELLATION******************************************************************************************************************************

        if($('#status_id :selected').text()=='Cancelled' || $('#status_id :selected').text()=='Close' ){
            $('#cancel_btn').hide();
            $('#create').hide();
            $("#status_id").css('color', 'red');
            $("#status_id").css('font-weight', 'bold');
            $("#status_id").css('font-size', '14px' );
        }
        else{
            $('#cancel_btn').show();
        }

        $('#cancel_btn').click(function(){
            try{

                $('#modal_cancel').modal('show');

            }catch(msg){console.log(msg.message)}
        });

        function canclearmodel() {
            $("#cancellation_reason_id").val("");
            $("#cancellation_remarks").val("");
        }


        $('#cancelled').click(function(){
            try{
                if($('#cancellation_reason_id').val()==''){
                    sweetAlert("","Please enter the Cancellation Reason for cancellation","error");
                }
                else{
                    $.ajax({
                        url:'@Url.Action("cancel", "MaterialIN")',
                        data:{material_in_id:$('#material_in_id').val(),cancellation_reason_id:$('#cancellation_reason_id').val(),cancellation_remarks:$('#cancellation_remarks').val()},

                        success: function (id) {
                            if(id.includes("cancelled"))
                            {
                                swal({
                                    title: "cancelled",
                                    text: "Your Material IN has been cancelled.",
                                    type: "success",
                                    showCancelButton: false,
                                    closeOnConfirm: false,
                                    showLoaderOnConfirm: false
                                }, function () {
                                    location.href = '@Url.Action("Index", "MaterialIN")'
                                });
                            }
                            else
                            {
                                swal("Error", id, "error");
                                return false;
                            }
                        }
                    });
                }

            }catch(msg){console.log(msg.message)}
        });

        //*****************************************************************************************************************************************************

        $(document).ready(function () {
            $("#plant_id").select2({
                placeholder: "Select Plant",
                allowClear: true
            });
            $("#item_id").select2({
                placeholder: "Select Item",
                allowClear: true
            });
            //$("#sloc_id").select2({
            //    placeholder: "Select Storage Location",
