@model Sciffer.Erp.Domain.Model.REF_CURRENCY

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="col-lg-12 col-sm-12">
                <div class="form-group">
                    @Html.LabelFor(model => model.CURRENCY_NAME, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CURRENCY_NAME, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CURRENCY_NAME, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-sm-12">
                <div class="form-group">
                    @Html.LabelFor(model => model.CURRENCY_DESCRIPTION, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CURRENCY_DESCRIPTION, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CURRENCY_DESCRIPTION, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-sm-12">
                <div class="form-group">
                    @Html.LabelFor(model => model.IS_LOCAL_CURRENCY, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.IS_LOCAL_CURRENCY, new { htmlAttributes = new { @class = "form-control data-reverse", Type = "checkbox" } })
                        @Html.ValidationMessageFor(model => model.IS_LOCAL_CURRENCY, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12 col-sm-12">
                <div class="form-group">
                    @Html.LabelFor(model => model.CURRENCY_COUNTRY_ID, "Country", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("CURRENCY_COUNTRY_ID", (System.Web.Mvc.SelectList)ViewBag.Countrylist, "---Select---", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CURRENCY_COUNTRY_ID, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
     </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-success" id="create" name="create" style="float:right" />
                </div>
            </div>
        </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
            <script type="text/javascript">
                $(function () {//code inside this function will run when the document is ready PREFERRED_VENDOR_ID
                    $('#IS_LOCAL_CURRENCY').checkboxpicker();
                });
                $("#create").click(function (e) {
                    e.preventDefault();
                    var currency = $('#CURRENCY_NAME').val();
                    var country = $('#CURRENCY_COUNTRY_ID').val();
                    if (currency == "") {
                        sweetAlert("", "Currency is required!", "error");
                    }
                    else if(country=="")
                    {
                        sweetAlert("", "Country is required!", "error");
                    }
                    else {
                        $.ajax({
                            url: '/Currency/CheckDuplicate',
                            type: "GET",
                            dataType: "JSON",
                            asynch: true,
                            data: { st: currency, id: 0 },
                            success: function (output) {
                                if (output != 0) {
                                    sweetAlert("", currency + " is already present in databse!", "error");
                                }
                                else {
                                    document.forms[0].submit();
                                }
                            }
                        });
                    }
                });
            </script>

           
        }
