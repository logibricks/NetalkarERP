                            <div class="col-md-8 col-sm-8 col-xs-12">
                                @Html.EditorFor(model => model.BUCKET_FREE, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.BUCKET_FREE, "", new { @class = "text-danger" })
                            </div>
