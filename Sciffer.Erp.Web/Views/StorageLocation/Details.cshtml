        <div class="row">
            <div class="col-lg-6 col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.STORAGE_LOCATION_NAME, htmlAttributes: new { @class = "control-label col-md-4 col-sm-4 col-xs-12" })
