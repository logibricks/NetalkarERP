@using Sciffer.Erp.Domain.ViewModel
@{
    ViewBag.Title = "Index";
}
<br /><br /><br />
<div>
    @(Html.EJ().Grid<ref_plan_breakdown_order_VM>("Searching")
        .Datasource((IEnumerable<object>)ViewBag.DataSource)
        .EditSettings(edit => { edit.AllowAdding().AllowDeleting().AllowEditing().EditMode(EditMode.InlineFormTemplate); })
        .ToolbarSettings(toolBar => toolBar.ShowToolbar().ToolbarItems(items =>
        {
            items.AddTool(ToolBarItems.Add);
            items.AddTool(ToolBarItems.Edit);
            items.AddTool(ToolBarItems.ExcelExport);
            items.AddTool(ToolBarItems.PrintGrid);
        }))
        .Mappers(map => map.ExportToExcelAction(Url.Action("ExportToExcel", "Generic", new { ctrlname = "AssetMasterData" })))
        .AllowSorting()
        .AllowPaging()
        .IsResponsive()
        .AllowFiltering()
        .ShowColumnChooser()
        .AllowReordering()
        .AllowScrolling()
        .ScrollSettings(col => { col.Width("100%"); })
        .FilterSettings(filter => { filter.FilterType(FilterType.Excel); })
        .Columns(col =>
        {
            col.Field("asset_master_data_id").Width("15%").HeaderText("ID").IsPrimaryKey(true).Visible(false).Add();
            col.Field("asset_master_data_code").Width("15%").HeaderText("Asset Code").Add();
            col.Field("machine_name").Width("15%").HeaderText("Machine").Add();
            col.Field("asset_master_data_desc").Width("15%").HeaderText("Description").Add();
            col.Field("asset_class_name").Width("15%").HeaderText("Asset Class").Add();
            col.Field("asset_group_name").Width("15%").HeaderText("Asset Group").Add();        
            col.Field("status_name").Width("15%").HeaderText("Status").Add();
            


        }).ClientSideEvents(eve =>
        {
            eve.ActionBegin("actionBegin");
            eve.RightClick("rightClick");
        })
    )
</div>
<style>
    .e-editedrow {
        display: none;
    }

    .e-editcell {
        display: none;
    }
</style>

<script type="text/javascript">
    $(document).ready(function () {
        var doc_no = '@ViewBag.num';
        console.log(doc_no);
        if (doc_no != '') {
            if (doc_no != 0) {
                sweetAlert("", doc_no + " Saved successfully!", "success");
            }
        }
    });
    function actionBegin(args) {
        if (args.requestType == "beginedit")
        {
            location.href = "@Url.Action("Edit", "AssetMasterData")?id=" + args.rowData.asset_master_data_id;
        }
        if (args.requestType == "add") {
            location.href = '@Url.Action("Create", "AssetMasterData")';
        }
    }
    function rightClick(args) {
        location.href = "@Url.Action("Details", "AssetMasterData")?id=" + args.data.asset_master_data_id;
    }
    function Click(args) {
        $('a').css('color','red');
    }


</script>








