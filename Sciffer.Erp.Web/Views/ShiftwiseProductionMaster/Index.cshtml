@using Sciffer.Erp.Domain.ViewModel

@{
    ViewBag.Title = "Index";
}
<br />
<br />
<br />
<div>
    @(Html.EJ().Grid<mfg_shiftwise_production_master_vm>("Searching")
        .Datasource(ds => ds.URL(Url.Action("GetIndexData", "Generic", new { @ctrl_name = "ShiftwiseProductionMaster" }))
         .EnableCaching()
        .CachingPageSize(4)
        .TimeTillExpiration(120000)
        .Adaptor(AdaptorType.UrlAdaptor))
        .EditSettings(edit => { edit.AllowAdding().AllowDeleting().AllowEditing().EditMode(EditMode.InlineFormTemplate); })
        .ToolbarSettings(toolBar => toolBar.ShowToolbar().ToolbarItems(items =>
        {
            items.AddTool(ToolBarItems.Add);
            items.AddTool(ToolBarItems.Edit);
            items.AddTool(ToolBarItems.ExcelExport);
            items.AddTool(ToolBarItems.WordExport);
            items.AddTool(ToolBarItems.PdfExport);
            items.AddTool(ToolBarItems.PrintGrid);
        }))
        .Mappers(map => map.ExportToExcelAction(Url.Action("ExportToExcel", "Generic", new { ctrlname = "ShiftwiseProductionMaster" }))
        .ExportToPdfAction(Url.Action("ExportToPdf", "Generic", new { ctrlname = "ShiftwiseProductionMaster" })).ExportToWordAction(Url.Action("ExportToWord", "Generic", new { ctrlname = "ShiftwiseProductionMaster" })))
        .AllowSorting()
       .AllowPaging().PageSettings(a => a.PageSize(20))
        .IsResponsive()
        .AllowFiltering()
        //.ShowColumnChooser()
        .AllowReordering()
        .AllowScrolling()
        .ScrollSettings(col => { col.Width("100%"); })
        .FilterSettings(filter => { filter.FilterType(FilterType.Excel); })
        .Columns(col =>
        {
            col.Field("shift_wise_production_id").HeaderText("ID").IsPrimaryKey(true).Width(80).Visible(false).Add();
            col.Field("category").HeaderText("Document Category").Visible(true).Add();
            col.Field("document_no").HeaderText("Document Number").Add();
            col.Field("posting_date").HeaderText("Posting Date").Format("{0:dd/MM/yyyy}").Add();
            col.Field("Plant_Name").HeaderText("Plant Name").Visible(true).Add();
            col.Field("Shift_Desc").HeaderText("Shift Name").Visible(true).Add();
            col.Field("created_name").HeaderText("Created By").Visible(true).Add();
            col.Field("created_ts").Visible(true).Width("15%").HeaderText("Created Date & Time").Format("{0:dd/MM/yyyy hh:mm:ss tt}").Add();
            col.Field("modified_name").HeaderText("Modified By").Visible(true).Add();
            col.Field("modified_on").Visible(true).Width("15%").HeaderText("Modified Date & Time").Format("{0:dd/MM/yyyy hh:mm:ss tt}").Add();

        }).ClientSideEvents(eve =>
        {
            eve.ActionBegin("actionBegin");
            eve.RightClick("rightClick");
        })
    )
</div>
<style>
    .e-editedrow {
        display: none;
    }

    .e-editcell {
        display: none;
    }
</style>

<script type="text/javascript">

    function actionBegin(args) {
        if (args.requestType == "beginedit")
        {
            location.href = "@Url.Action("Edit", "ShiftwiseProductionMaster")?id=" + args.rowData.shiftwise_production_id;
        }
        if (args.requestType == "add") {
            location.href = "@Url.Action("Create", "ShiftwiseProductionMaster")";
        }
    }
    @*function rightClick(args) {
        location.href = "@Url.Action("Details", "GoodsIssue")?id=" + args.data.goods_issue_id;
    }*@
    $(document).ready(function () {
        @*var num = '@Html.ViewBag.num';
        if (num != '') {
            if (num != undefined) {
                sweetAlert("", num + " Saved successfully.", "success");
            }
        }*@
    });

</script>
