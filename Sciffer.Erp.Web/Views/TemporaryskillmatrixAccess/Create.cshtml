                </div>
            </div>

            <div class="col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.shift_id, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.DropDownList("shift_id", (System.Web.Mvc.SelectList)ViewBag.GetShiftlist, "---Select---", htmlAttributes: new { @class = "form-control validinput", @required = true, })
                        @Html.ValidationMessageFor(model => model.shift_id, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
