                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.level_id, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.DropDownList("level_id", (System.Web.Mvc.SelectList)ViewBag.level_list, "---Select---", htmlAttributes: new { @class = "form-control validinput", @required = true, })
                        @Html.ValidationMessageFor(model => model.level_id, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <br /><br />
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.machine_id, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.DropDownList("machine_id", (System.Web.Mvc.SelectList)ViewBag.machine_list, "---Select---", htmlAttributes: new { @class = "form-control validinput", @required = true, })
                        @Html.ValidationMessageFor(model => model.machine_id, "", new { @class = "text-danger" })
