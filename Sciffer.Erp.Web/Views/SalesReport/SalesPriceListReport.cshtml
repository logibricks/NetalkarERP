

@using Sciffer.Erp.Domain.ViewModel
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">


        <div class="form-horizontal">
            <div class=row>
                <div class="col-md-4 col-lg-4 col-xs-12">
                    <div class="form-group">
                        <label class="control-label col-md-5 col-lg-5 col-xs-12">Customer Category</label>
                        <div class="col-md-7 col-lg-7 col-xs-12">
                            @Html.DropDownList("customer_category_id", (System.Web.Mvc.SelectList)ViewBag.customer_category_list, htmlAttributes: new { @class = "form-control mickey customer_category_id", multiple = "multiple" })
                        </div>
                    </div>
                </div>
                <div class="col-md-4 col-lg-4 col-xs-12">
                    <label class="control-label col-md-5 col-lg-5 col-xs-12">Item Group </label>
                    <div class="col-md-7 col-lg-7 col-xs-12">
                        @Html.DropDownList("item_group", (System.Web.Mvc.SelectList)ViewBag.item_group_list, htmlAttributes: new { @class = "form-control mickey item_group", multiple = "multiple" })
                    </div>
                </div>
                <div class="col-md-4 col-lg-4 col-xs-12">
                    <label class="control-label col-md-5 col-lg-5 col-xs-12">Customer Priority</label>
                    <div class="col-md-7 col-lg-7 col-xs-12">
                        @Html.DropDownList("customer_priority_id", (System.Web.Mvc.SelectList)ViewBag.customer_priority_list, htmlAttributes: new { @class = "form-control mickey customer_priority_id", multiple = "multiple" })
                    </div>
                </div>
            </div>
            <br />
            <div class=row>
                <div class="col-md-4 col-lg-4 col-xs-12">
                    <label class="control-label col-md-5 col-lg-5 col-xs-12">Item Priority</label>
                    <div class="col-md-7 col-lg-7 col-xs-12">
                        @Html.DropDownList("item_priority_id", (System.Web.Mvc.SelectList)ViewBag.item_priority_list, htmlAttributes: new { @class = "form-control mickey item_priority_id", multiple = "multiple" })
                    </div>
                </div>
                <div class="col-md-4 col-lg-4 col-xs-12">
                    <div class="col-md-5 col-lg-5 col-xs-12">
                        <label></label>
                    </div>
                    <div class="col-md-7 col-lg-7 col-xs-12">
                        <input type="hidden" id="partial" value="Partial_SalesPriceList" />
                        <input type="hidden" id="entity" value="get_sales_price_list_report" />
                    </div>
                </div>
                <div class="col-md-4 col-lg-4 col-xs-12">
                    <div class="control-label col-md-5 col-lg-5 col-xs-12">

                    </div>
                    <div class="col-md-7 col-lg-7 col-xs-12">
                        <button class="searchbutton searchButton" id="search" onclick="DateCheck();"> &nbsp; Run Report </button>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">

    </div>
    <div class="x_content">
        <div id="searchresult">
            @Html.Partial("Partial_SalesPriceList", (object)ViewBag)
        </div>
    </div>

</div>


