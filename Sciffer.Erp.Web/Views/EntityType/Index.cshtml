@model IEnumerable<Sciffer.Erp.Domain.Model.REF_ENTITY_TYPE>

@{
    ViewBag.Title = "Index";
}



<p>
    <a href="@Url.Action("Create", "EntityType")" data-toggle="modal" class="btn-circle btn-lg btn-primary"><span class="glyphicon glyphicon-plus"></span> </a>
</p>

<div class="row">

    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <table id="example" class="table table-striped responsive-utilities jambo_table table-bordered">
                <thead>
                    <tr class="headings">
                        <th>
                            @Html.DisplayNameFor(model => model.ENTITY_TYPE_NAME)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="even pointer">
                            <td>
                                @Html.DisplayFor(modelItem => item.ENTITY_TYPE_NAME)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.ENTITY_TYPE_ID }) |
                                @Html.ActionLink("Details", "Details", new { id = item.ENTITY_TYPE_ID }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.ENTITY_TYPE_ID })
                            </td>
                        </tr>
                    }
                </tbody>

            </table>

        </div>
    </div>
</div>

