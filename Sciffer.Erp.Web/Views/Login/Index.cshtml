<style>
    .logo{
            margin: auto;
    padding: 0%;
    width: 30%;
    }

    .center {
            text-align: center;
    margin: auto;
    padding: -2%;
    width: 23%;s
    }

    .login-heading {
        font: 1.8em/48px "Tenor Sans", sans-serif;
        color: #2A3F54;
    }

    .input-txt {
        border-radius:20px;
        text-align: center;
        width: 100%;
        padding: 20px 10px;
        background: #2A3F54;
        border: none;
        font-size: 1em;
        color: white;
        border-bottom: 1px dotted rgba(250, 250, 250, 0.4);
        -moz-box-sizing: border-box;
        -webkit-box-sizing: border-box;
        box-sizing: border-box;
        -moz-transition: background-color 0.5s ease-in-out;
        -o-transition: background-color 0.5s ease-in-out;
        -webkit-transition: background-color 0.5s ease-in-out;
        transition: background-color 0.5s ease-in-out;
    }

        .input-txt:-moz-placeholder {
            color: grey;
        }

        .input-txt:-ms-input-placeholder {
            border-radius:20px;
            color: white;
        }

        .input-txt::-webkit-input-placeholder {
            border-radius:20px;
            color: white;
        }

        .input-txt:focus {
            border-radius:20px;
            background-color: #4478a0;
        }

    .login-footer {
        padding-top: 15px;
        overlow: hidden;
        float: left;
        width: 100%;
    }

    .btn {
        padding: 10px 20px !important;
        border: none;
        float: right;
    }

    .lnk {
        font-size: 14px;
        color: #14a8cc;
        text-decoration: none;
        float: left;
    }

    .tabletext {
        width: 100%;
    }
</style>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>

    <!-- Bootstrap -->
    <link href="~/Content/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="~/Content/font-awesome.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/Content/sweetalert.css" />

    <!-- Custom Theme Style -->
    <!-- jQuery -->
    <script src="~/Content/jquery/dist/jquery.min.js"></script>
    <!--Sweet Alert -->
    <script src="~/Scripts/sweetalert.min.js"></script>
</head>

<body class="login">
    <body background="~/Content/erp.jpg">
        <div class="logo">
            <img src="@Url.Content("~/Content/Logibricks.png")" width="100%">
        </div>
        <div class="center">
            <div class="login">
                <section class="animate form">
                    @using (Html.BeginForm("Login", "Login", FormMethod.Post, null))
                    {
                        

                        <table class="tabletext">

                            <tr>
                                <td>
                                    <div>
                                        <input type="text" name="user" class="input-txt" placeholder="Username" required="" />
                                    </div>
                                </td>
                            </tr>
                            <tr><td><br /></td></tr>
                            <tr>
                                <td>
                                    <div>
                                        <input type="password" name="password" class="input-txt" placeholder="Password" required="" />
                                    </div>
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <div class="login-footer">
                                        <button type="submit" class="btn btn-success">Log in</button>
                                        @*<a class="reset_pass lnk" href="#">Lost your password?</a>*@
                                    </div>
                                </td>
                            </tr>
                        </table>
                        <div class="clearfix"></div>
                    }
                </section>
            </div>
        </div>
    </body>
</body>
</html>
<script>
    function swalmsg(title, text, type, showConfirmButton) {
        swal({
            title: title,
            text: text,
            type: type,
            showConfirmButton: showConfirmButton
        });
    }
    $(document).ready(function () {
        var xx = @Html.Raw(Json.Encode(ViewBag.msg))        
        if (xx == "failed") {

            swalmsg("Login Failed", "User Name or Password is incorrect", "warning", true);
            window.location.href = "@Url.Action("Index","Login")"
        }
        if (xx == "expired") {

            swalmsg("Login Session Expired", "Please Login again to continue", "warning", true);
        }
    })
</script>

